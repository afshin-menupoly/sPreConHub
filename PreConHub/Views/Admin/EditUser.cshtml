@model PreConHub.Models.ViewModels.AdminEditUserViewModel
@using PreConHub.Models.Entities
@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-action="Dashboard">Admin</a></li>
            <li class="breadcrumb-item"><a asp-action="Users">Users</a></li>
            <li class="breadcrumb-item active">Edit User</li>
        </ol>
    </nav>
    <h1 class="h3 mb-4"><i class="bi bi-pencil me-2"></i>Edit User</h1>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form asp-action="EditUser" method="post">
                        <input asp-for="UserId" type="hidden" />
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">First Name *</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">Last Name *</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email *</label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label">Phone</label>
                                <input asp-for="Phone" class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="CompanyName" class="form-label">Company Name</label>
                                <input asp-for="CompanyName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LawFirm" class="form-label">Law Firm</label>
                                <input asp-for="LawFirm" class="form-control" />
                                <small class="text-muted">Applicable for Lawyer accounts</small>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="UserType" class="form-label">User Type *</label>
                                <select asp-for="UserType" class="form-select">
                                    <option value="@((int)UserType.Builder)">Builder</option>
                                    <option value="@((int)UserType.Purchaser)">Purchaser</option>
                                    <option value="@((int)UserType.Lawyer)">Lawyer</option>
                                    <option value="@((int)UserType.MarketingAgency)">Marketing Agency</option>
                                    @if (User.IsInRole("SuperAdmin"))
                                    {
                                        <option value="@((int)UserType.PlatformAdmin)">Admin</option>
                                    }
                                </select>
                                <span asp-validation-for="UserType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-check form-switch mb-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">Account Active</label>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Save Changes
                            </button>
                            <a asp-action="UserDetail" asp-route-id="@Model.UserId" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
