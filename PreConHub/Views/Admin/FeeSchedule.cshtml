@model PreConHub.Models.ViewModels.FeeScheduleViewModel
@{
    ViewData["Title"] = "Fee Schedule Management";
}

<div class="container-fluid py-4">

    <div class="d-flex align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-gear text-primary me-2"></i>Fee Schedule Management
            </h1>
            <p class="text-muted mb-0">
                Edit province-wide closing fees. Changes take effect immediately for all future SOA calculations.
            </p>
        </div>
        <div class="ms-auto d-flex gap-2">
            <a asp-controller="Projects" asp-action="FeeReference" class="btn btn-outline-info">
                <i class="bi bi-book me-1"></i>Fee Reference
            </a>
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-table me-2 fs-5"></i>
            <h5 class="mb-0">Ontario Flat Fee Schedule</h5>
            <span class="badge bg-white text-primary ms-auto">@Model.Fees.Count fees configured</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:5%">#</th>
                            <th style="width:20%">Fee Name</th>
                            <th style="width:8%">Key</th>
                            <th style="width:12%">Base Amount</th>
                            <th style="width:12%">HST Treatment</th>
                            <th style="width:12%">Total at Closing</th>
                            <th>Notes</th>
                            <th style="width:10%">Last Updated</th>
                            <th style="width:7%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fee in Model.Fees)
                        {
                            var totalAtClosing = fee.HSTApplicable
                                ? fee.Amount * 1.13m
                                : fee.Amount;
                            <tr>
                                <td class="text-muted">@fee.Id</td>
                                <td class="fw-semibold">@fee.DisplayName</td>
                                <td><code>@fee.Key</code></td>
                                <td class="font-monospace">@fee.Amount.ToString("C")</td>
                                <td>
                                    @if (fee.HSTIncluded)
                                    {
                                        <span class="badge bg-success">HST included</span>
                                    }
                                    else if (fee.HSTApplicable)
                                    {
                                        <span class="badge bg-warning text-dark">+13% HST</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No HST</span>
                                    }
                                </td>
                                <td class="font-monospace fw-bold text-primary">@totalAtClosing.ToString("C")</td>
                                <td class="small text-muted">@fee.Notes</td>
                                <td class="small text-muted">@fee.UpdatedAt.ToString("MMM d, yyyy")</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#editFee-@fee.Id"
                                            aria-expanded="false">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                </td>
                            </tr>
                            <tr class="collapse" id="editFee-@fee.Id">
                                <td colspan="9" class="bg-light border-top-0">
                                    <form asp-action="UpdateFeeConfig" method="post" class="p-3">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="Id" value="@fee.Id" />
                                        <div class="row g-3 align-items-end">
                                            <div class="col-md-2">
                                                <label class="form-label fw-semibold small">Base Amount ($)</label>
                                                <input type="number" name="Amount" value="@fee.Amount"
                                                       class="form-control" step="0.01" min="0" max="999999.99" required />
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-check mt-4">
                                                    <input type="checkbox" name="HSTApplicable" value="true"
                                                           class="form-check-input" id="hstApplicable-@fee.Id"
                                                           @(fee.HSTApplicable ? "checked" : "") />
                                                    <label class="form-check-label small" for="hstApplicable-@fee.Id">
                                                        HST Applicable (+13%)
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input type="checkbox" name="HSTIncluded" value="true"
                                                           class="form-check-input" id="hstIncluded-@fee.Id"
                                                           @(fee.HSTIncluded ? "checked" : "") />
                                                    <label class="form-check-label small" for="hstIncluded-@fee.Id">
                                                        HST Already Included
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-5">
                                                <label class="form-label fw-semibold small">Notes / Source</label>
                                                <input type="text" name="Notes" value="@fee.Notes"
                                                       class="form-control" maxlength="500" />
                                            </div>
                                            <div class="col-md-3 d-flex gap-2">
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="bi bi-check-lg me-1"></i>Save
                                                </button>
                                                <button type="button" class="btn btn-outline-secondary"
                                                        data-bs-toggle="collapse"
                                                        data-bs-target="#editFee-@fee.Id">
                                                    Cancel
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted small">
            <i class="bi bi-info-circle me-1"></i>
            Changes are audited. The SOA calculation engine reads these values at calculation time â€” updates apply to all future SOA runs.
        </div>
    </div>

</div>
