@model PreConHub.Models.ViewModels.AdminSetBuilderQuotaViewModel
@{
    ViewData["Title"] = $"Quotas: {Model.BuilderName}";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-action="Dashboard">Admin</a></li>
            <li class="breadcrumb-item"><a asp-action="Users">Users</a></li>
            <li class="breadcrumb-item"><a asp-action="UserDetail" asp-route-id="@Model.UserId">@Model.BuilderName</a></li>
            <li class="breadcrumb-item active">Manage Quotas</li>
        </ol>
    </nav>
    <h1 class="h3 mb-4"><i class="bi bi-sliders me-2"></i>Manage Quotas for @Model.BuilderName</h1>

    <div class="row">
        <div class="col-lg-8">
            <form asp-action="SetBuilderQuota" method="post">
                <input asp-for="UserId" type="hidden" />
                <input asp-for="BuilderName" type="hidden" />

                <!-- Max Projects -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-buildings me-2 text-primary"></i>Project Limit</h5>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <label asp-for="MaxProjects" class="form-label fw-bold">Max Projects</label>
                                <input asp-for="MaxProjects" class="form-control" type="number" min="0" max="100" />
                            </div>
                            <div class="col-md-8">
                                <p class="text-muted mb-0 mt-2">
                                    Currently using <strong>@Model.Projects.Count</strong> of <strong>@Model.MaxProjects</strong> project slots.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Per-Project Unit Limits -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-house me-2 text-success"></i>Per-Project Unit Limits</h5>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.Projects.Any())
                        {
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Project</th>
                                        <th class="text-center">Current Units</th>
                                        <th class="text-center" style="width:150px;">Max Units</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Projects.Count; i++)
                                    {
                                        <tr>
                                            <td>
                                                <input type="hidden" name="Projects[@i].ProjectId" value="@Model.Projects[i].ProjectId" />
                                                <input type="hidden" name="Projects[@i].ProjectName" value="@Model.Projects[i].ProjectName" />
                                                <input type="hidden" name="Projects[@i].CurrentUnitCount" value="@Model.Projects[i].CurrentUnitCount" />
                                                <strong>@Model.Projects[i].ProjectName</strong>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@Model.Projects[i].CurrentUnitCount</span>
                                            </td>
                                            <td class="text-center">
                                                <input type="number" name="Projects[@i].MaxUnits"
                                                       value="@Model.Projects[i].MaxUnits"
                                                       class="form-control form-control-sm text-center"
                                                       min="0" max="1000"
                                                       placeholder="Not set" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="text-center py-4 text-muted">
                                This builder has no projects yet.
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-2"></i>Save Quotas
                    </button>
                    <a asp-action="UserDetail" asp-route-id="@Model.UserId" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
