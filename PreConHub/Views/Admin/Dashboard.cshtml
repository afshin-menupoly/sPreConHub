@model PreConHub.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1"><i class="bi bi-shield-lock me-2"></i>Admin Dashboard</h1>
            <p class="text-muted mb-0">System overview and user management</p>
        </div>
        <a asp-action="Users" class="btn btn-primary">
            <i class="bi bi-people me-2"></i>Manage Users
        </a>
    </div>

    <!-- Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- User Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Builders</h6>
                            <h2 class="mb-0">@Model.TotalBuilders</h2>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-building text-primary fs-4"></i>
                        </div>
                    </div>
                    <a asp-action="Users" asp-route-userType="Builder" class="small text-primary">
                        View all <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Purchasers</h6>
                            <h2 class="mb-0">@Model.TotalPurchasers</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-people text-success fs-4"></i>
                        </div>
                    </div>
                    <a asp-action="Users" asp-route-userType="Purchaser" class="small text-success">
                        View all <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Lawyers</h6>
                            <h2 class="mb-0">@Model.TotalLawyers</h2>
                        </div>
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-briefcase text-info fs-4"></i>
                        </div>
                    </div>
                    <a asp-action="Users" asp-route-userType="Lawyer" class="small text-info">
                        View all <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Admins</h6>
                            <h2 class="mb-0">@Model.TotalAdmins</h2>
                        </div>
                        <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-shield-lock text-danger fs-4"></i>
                        </div>
                    </div>
                    <a asp-action="Users" asp-route-userType="PlatformAdmin" class="small text-danger">
                        View all <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- System Stats -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Projects</h6>
                            <h2 class="mb-0">@Model.TotalProjects</h2>
                        </div>
                        <div class="bg-secondary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-buildings text-secondary fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Units</h6>
                            <h2 class="mb-0">@Model.TotalUnits</h2>
                        </div>
                        <div class="bg-secondary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-house text-secondary fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recently Registered Users -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-person-plus me-2 text-primary"></i>Recently Registered</h5>
                    <a asp-action="Users" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentUsers.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var user in Model.RecentUsers)
                            {
                                <a asp-action="UserDetail" asp-route-id="@user.UserId" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>@user.FullName</strong>
                                            <br>
                                            <small class="text-muted">@user.Email</small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge @user.UserTypeBadgeClass">@user.UserType</span>
                                            <br>
                                            <small class="text-muted">@user.CreatedAt.ToString("MMM dd")</small>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            No users registered yet.
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recently Active Users -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2 text-success"></i>Recently Active</h5>
                    <a asp-action="Users" class="btn btn-sm btn-outline-success">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentlyActiveUsers.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var user in Model.RecentlyActiveUsers)
                            {
                                <a asp-action="UserDetail" asp-route-id="@user.UserId" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>@user.FullName</strong>
                                            <br>
                                            <small class="text-muted">@user.Email</small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge @user.UserTypeBadgeClass">@user.UserType</span>
                                            <br>
                                            <small class="text-muted">@user.LastLoginDisplay</small>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            No recent activity.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
