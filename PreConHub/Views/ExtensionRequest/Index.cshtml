@model PreConHub.Models.ViewModels.ExtensionRequestListViewModel
@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-calendar-range text-primary me-2"></i>@Model.PageTitle
            </h1>
            <p class="text-muted mb-0">
                @if (Model.ShowingHistory)
                {
                    @:Review past extension request decisions
                }
                else
                {
                    @:Purchaser-submitted closing date extension requests awaiting your review
                }
            </p>
        </div>
        <div>
            @if (Model.ShowingHistory)
            {
                <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                    <i class="bi bi-clock me-1"></i>Pending Requests
                </a>
            }
            else
            {
                <a href="@Url.Action("History")" class="btn btn-outline-secondary">
                    <i class="bi bi-clock-history me-1"></i>View History
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @* Filter bar — History page only *@
    @if (Model.ShowingHistory)
    {
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body py-3">
                <form method="get" asp-action="History" id="filterForm">
                    <div class="row g-2 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label small text-muted mb-1">Project</label>
                            <select name="projectFilter" class="form-select form-select-sm">
                                <option value="">All Projects</option>
                                @foreach (var prj in Model.Projects)
                                {
                                    if (prj == Model.ProjectFilter)
                                    {
                                        <option value="@prj" selected>@prj</option>
                                    }
                                    else
                                    {
                                        <option value="@prj">@prj</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label small text-muted mb-1">Search</label>
                            <div class="input-group input-group-sm">
                                <span class="input-group-text"><i class="bi bi-search"></i></span>
                                <input type="text" name="search" id="searchBox" class="form-control"
                                       placeholder="Unit number or purchaser name..."
                                       value="@Model.SearchQuery" />
                            </div>
                        </div>
                        <div class="col-md-5 d-flex gap-2 align-items-end">
                            <input type="hidden" name="sortBy" value="@Model.SortBy" />
                            <input type="hidden" name="sortDir" value="@Model.SortDir" />
                            <button type="submit" class="btn btn-sm btn-primary">
                                <i class="bi bi-funnel me-1"></i>Apply
                            </button>
                            <a asp-action="History" class="btn btn-sm btn-outline-secondary">Clear</a>
                            <span class="text-muted small ms-auto">
                                @if (Model.Requests.Count < Model.TotalRequests)
                                {
                                    @:Showing @Model.Requests.Count of @Model.TotalRequests
                                }
                                else
                                {
                                    @:@Model.TotalRequests total
                                }
                            </span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }

    @if (!Model.Requests.Any())
    {
        @if (Model.ShowingHistory && (!string.IsNullOrWhiteSpace(Model.SearchQuery) || !string.IsNullOrWhiteSpace(Model.ProjectFilter)))
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="bi bi-search fs-1 text-muted mb-3 d-block"></i>
                    <h5 class="text-muted">No Requests Match Your Filters</h5>
                    <p class="text-muted">Try a different search term or clear the filters.</p>
                    <a asp-action="History" class="btn btn-outline-primary">
                        <i class="bi bi-x-circle me-1"></i>Clear Filters
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                @if (Model.ShowingHistory)
                {
                    @:No extension requests have been reviewed yet.
                }
                else
                {
                    @:No pending extension requests at this time.
                }
            </div>
        }
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                @if (Model.ShowingHistory)
                                {
                                    <th>
                                        <a href="@Url.Action("History", new { projectFilter = Model.ProjectFilter, search = Model.SearchQuery, sortBy = "unit", sortDir = Model.ToggleSortDir("unit") })"
                                           class="text-decoration-none text-dark">
                                            Unit <i class="bi @Model.SortIcon("unit") small"></i>
                                        </a>
                                    </th>
                                }
                                else
                                {
                                    <th>Unit</th>
                                }
                                <th>Project</th>
                                <th>Purchaser</th>
                                <th>Original Close</th>
                                <th>Requested Close</th>
                                <th class="text-center">Days</th>
                                <th>Reason</th>
                                @if (Model.ShowingHistory)
                                {
                                    <th>
                                        <a href="@Url.Action("History", new { projectFilter = Model.ProjectFilter, search = Model.SearchQuery, sortBy = "submitted", sortDir = Model.ToggleSortDir("submitted") })"
                                           class="text-decoration-none text-dark">
                                            Submitted <i class="bi @Model.SortIcon("submitted") small"></i>
                                        </a>
                                    </th>
                                    <th>
                                        <a href="@Url.Action("History", new { projectFilter = Model.ProjectFilter, search = Model.SearchQuery, sortBy = "status", sortDir = Model.ToggleSortDir("status") })"
                                           class="text-decoration-none text-dark">
                                            Status <i class="bi @Model.SortIcon("status") small"></i>
                                        </a>
                                    </th>
                                }
                                else
                                {
                                    <th>Submitted</th>
                                    <th>Status</th>
                                }
                                @if (Model.ShowingHistory)
                                {
                                    <th>Reviewed</th>
                                }
                                else
                                {
                                    <th></th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var req in Model.Requests)
                            {
                                <tr>
                                    <td class="fw-bold">@req.UnitNumber</td>
                                    <td>@req.ProjectName</td>
                                    <td>@req.PurchaserName</td>
                                    <td class="text-muted small">
                                        @(req.OriginalClosingDate?.ToString("MMM dd, yyyy") ?? "—")
                                    </td>
                                    <td class="small">@req.RequestedNewClosingDate.ToString("MMM dd, yyyy")</td>
                                    <td class="text-center">
                                        @if (req.DaysRequested > 0)
                                        {
                                            <span class="badge bg-light text-dark">+@req.DaysRequested d</span>
                                        }
                                    </td>
                                    <td class="small text-muted" style="max-width:200px;">
                                        @(req.Reason ?? "—")
                                    </td>
                                    <td class="text-muted small">@req.RequestedDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge @req.StatusBadgeClass">@req.StatusText</span>
                                    </td>
                                    @if (Model.ShowingHistory)
                                    {
                                        <td class="small">
                                            @if (req.ReviewedAt.HasValue)
                                            {
                                                <span>@req.ReviewedByName</span><br />
                                                <span class="text-muted">@req.ReviewedAt.Value.ToString("MMM dd, yyyy")</span>
                                                @if (!string.IsNullOrEmpty(req.ReviewerNotes))
                                                {
                                                    <br /><span class="text-muted fst-italic">@req.ReviewerNotes</span>
                                                }
                                            }
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <a href="@Url.Action("ReviewExtensionRequest", "Units", new { id = req.RequestId })"
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil-square me-1"></i>Review
                                            </a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-muted small">
            <i class="bi bi-info-circle me-1"></i>
            @Model.Requests.Count request(s) shown.
            @if (!Model.ShowingHistory)
            {
                @:Click "Review" to approve or reject a request. Approved requests automatically update the closing date and trigger SOA recalculation.
            }
        </div>
    }
</div>

@if (Model.ShowingHistory)
{
    @section Scripts {
    <script>
        (function () {
            var timer = null;
            var searchBox = document.getElementById('searchBox');
            if (!searchBox) return;
            searchBox.addEventListener('input', function () {
                clearTimeout(timer);
                var val = this.value.trim();
                if (val.length >= 2 || val.length === 0) {
                    timer = setTimeout(function () {
                        document.getElementById('filterForm').submit();
                    }, 400);
                }
            });
        })();
    </script>
    }
}
