@model PreConHub.Models.ViewModels.CreateUnitViewModel
@{
    ViewData["Title"] = "Edit Unit";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Projects")">Projects</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Projects", new { id = Model.ProjectId })">@ViewBag.ProjectName</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Details", "Units", new { id = ViewBag.UnitId })">Unit @Model.UnitNumber</a></li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </nav>
                <h1 class="h3 mb-1">Edit Unit @Model.UnitNumber</h1>
                <p class="text-muted">Update unit details for @ViewBag.ProjectName</p>
            </div>

            <!-- Form Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" asp-route-id="@ViewBag.UnitId" method="post">
                        <input type="hidden" asp-for="ProjectId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Unit Information -->
                        <h5 class="mb-3 pb-2 border-bottom">
                            <i class="bi bi-house-door me-2 text-primary"></i>Unit Information
                        </h5>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="UnitNumber" class="form-label">Unit Number <span class="text-danger">*</span></label>
                                <input asp-for="UnitNumber" class="form-control" />
                                <span asp-validation-for="UnitNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="FloorNumber" class="form-label">Floor</label>
                                <input asp-for="FloorNumber" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="UnitType" class="form-label">Unit Type</label>
                                <select asp-for="UnitType" class="form-select" asp-items="Html.GetEnumSelectList<PreConHub.Models.Entities.UnitType>()">
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Bedrooms" class="form-label">Bedrooms</label>
                                <input asp-for="Bedrooms" type="number" class="form-control" min="0" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Bathrooms" class="form-label">Bathrooms</label>
                                <input asp-for="Bathrooms" type="number" class="form-control" min="1" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="SquareFootage" class="form-label">Square Footage</label>
                                <input asp-for="SquareFootage" type="number" step="0.01" class="form-control" />
                            </div>
                        </div>

                        <!-- Pricing -->
                        <h5 class="mb-3 pb-2 border-bottom mt-4">
                            <i class="bi bi-currency-dollar me-2 text-primary"></i>Pricing
                        </h5>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="PurchasePrice" class="form-label">Purchase Price (APS) <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PurchasePrice" type="number" step="0.01" class="form-control" />
                                </div>
                                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Parking & Locker -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-check mb-2">
                                    <input asp-for="HasParking" class="form-check-input" type="checkbox" id="hasParking" onchange="toggleParkingPrice()" />
                                    <label class="form-check-label" for="hasParking">Includes Parking</label>
                                </div>
                                <div id="parkingPriceDiv">
                                    <label asp-for="ParkingPrice" class="form-label">Parking Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="ParkingPrice" type="number" step="0.01" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mb-2">
                                    <input asp-for="HasLocker" class="form-check-input" type="checkbox" id="hasLocker" onchange="toggleLockerPrice()" />
                                    <label class="form-check-label" for="hasLocker">Includes Locker</label>
                                </div>
                                <div id="lockerPriceDiv">
                                    <label asp-for="LockerPrice" class="form-label">Locker Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="LockerPrice" type="number" step="0.01" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Dates -->
                        <h5 class="mb-3 pb-2 border-bottom mt-4">
                            <i class="bi bi-calendar me-2 text-primary"></i>Dates
                        </h5>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="OccupancyDate" class="form-label">Occupancy Date</label>
                                <input asp-for="OccupancyDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ClosingDate" class="form-label">Closing Date</label>
                                <input asp-for="ClosingDate" type="date" class="form-control" />
                            </div>
                        </div>

                        <!-- SOA Adjustment Inputs -->
                        <h5 class="mb-3 pb-2 border-bottom mt-4">
                            <i class="bi bi-calculator me-2 text-primary"></i>SOA Adjustment Inputs
                        </h5>
                        <div class="alert alert-info py-2 mb-3 small">
                            <i class="bi bi-info-circle me-1"></i>
                            These values are used in the Statement of Adjustments calculation.
                            Leave blank to use estimated values. See the
                            <a href="@Url.Action("FeeReference", "Projects")" class="alert-link" target="_blank">Fee Reference</a>
                            page for guidance.
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="ActualAnnualLandTax" class="form-label">Actual Annual Land Tax</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="ActualAnnualLandTax" type="number" step="0.01" min="0" class="form-control" placeholder="e.g. 4200.00" />
                                </div>
                                <div class="form-text">Annual municipal property tax bill for this unit.</div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ActualMonthlyMaintenanceFee" class="form-label">Actual Monthly Maintenance Fee</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="ActualMonthlyMaintenanceFee" type="number" step="0.01" min="0" class="form-control" placeholder="e.g. 650.00" />
                                </div>
                                <div class="form-text">Monthly common expense / maintenance fee for this unit.</div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <div>
                                <a href="@Url.Action("Details", "Units", new { id = ViewBag.UnitId })" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Cancel
                                </a>
                            </div>
                            <div>
                                <button type="button" class="btn btn-outline-danger me-2" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="bi bi-trash me-1"></i>Delete Unit
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg me-2"></i>Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger"><i class="bi bi-exclamation-triangle me-2"></i>Delete Unit</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>Unit @Model.UnitNumber</strong>?</p>
                <p class="text-danger mb-0">This action cannot be undone. All associated data (deposits, SOA, purchaser info) will be permanently deleted.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@ViewBag.UnitId" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Yes, Delete Unit
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleParkingPrice() {
            var checkbox = document.getElementById('hasParking');
            var priceDiv = document.getElementById('parkingPriceDiv');
            priceDiv.style.display = checkbox.checked ? 'block' : 'none';
        }

        function toggleLockerPrice() {
            var checkbox = document.getElementById('hasLocker');
            var priceDiv = document.getElementById('lockerPriceDiv');
            priceDiv.style.display = checkbox.checked ? 'block' : 'none';
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            toggleParkingPrice();
            toggleLockerPrice();
        });
    </script>
}
