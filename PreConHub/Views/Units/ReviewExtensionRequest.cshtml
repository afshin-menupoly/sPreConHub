@model PreConHub.Models.ViewModels.ReviewExtensionRequestViewModel
@{
    ViewData["Title"] = "Review Extension Request";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Projects")">Projects</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Details", "Units", new { id = Model.UnitId })">Unit @Model.UnitNumber</a></li>
                        <li class="breadcrumb-item active">Review Extension Request</li>
                    </ol>
                </nav>
                <h1 class="h3 mb-1">
                    <i class="bi bi-calendar-check text-primary me-2"></i>Review Extension Request
                </h1>
                <p class="text-muted">Unit @Model.UnitNumber â€” @Model.ProjectName</p>
            </div>

            <!-- Request Summary Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-person me-2"></i>Request Details</h6>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="text-muted small">Purchaser</div>
                            <div class="fw-bold">@Model.PurchaserName</div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-muted small">Request Submitted</div>
                            <div class="fw-bold">@Model.RequestedDate.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-muted small">Current / Original Closing Date</div>
                            <div class="fw-bold text-danger">@Model.OriginalClosingDate.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-muted small">Requested New Closing Date</div>
                            <div class="fw-bold text-success">@Model.RequestedNewClosingDate.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="col-12">
                            <div class="text-muted small mb-1">Reason Provided</div>
                            <div class="border rounded p-3 bg-light">@(string.IsNullOrWhiteSpace(Model.Reason) ? "No reason provided." : Model.Reason)</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Review Form -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Your Decision</h6>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ReviewExtensionRequest" method="post">
                        <input type="hidden" asp-for="RequestId" />
                        <input type="hidden" asp-for="UnitId" />
                        <input type="hidden" asp-for="UnitNumber" />
                        <input type="hidden" asp-for="ProjectName" />
                        <input type="hidden" asp-for="PurchaserName" />
                        <input type="hidden" asp-for="OriginalClosingDate" />
                        <input type="hidden" asp-for="RequestedNewClosingDate" />
                        <input type="hidden" asp-for="Reason" />
                        <input type="hidden" asp-for="RequestedDate" />

                        <!-- Approve / Reject -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Decision <span class="text-danger">*</span></label>
                            <div class="d-flex gap-3">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Approve" id="approveYes"
                                           value="true" @(Model.Approve ? "checked" : "") />
                                    <label class="form-check-label text-success fw-semibold" for="approveYes">
                                        <i class="bi bi-check-circle me-1"></i>Approve
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Approve" id="approveNo"
                                           value="false" @(!Model.Approve ? "checked" : "") />
                                    <label class="form-check-label text-danger fw-semibold" for="approveNo">
                                        <i class="bi bi-x-circle me-1"></i>Reject
                                    </label>
                                </div>
                            </div>
                            <div class="form-text mt-1">
                                Approving will update the unit closing date to
                                <strong>@Model.RequestedNewClosingDate.ToString("MMMM dd, yyyy")</strong>
                                and automatically recalculate the SOA.
                            </div>
                        </div>

                        <!-- Reviewer Notes -->
                        <div class="mb-4">
                            <label asp-for="ReviewerNotes" class="form-label fw-bold">Notes (Optional)</label>
                            <textarea asp-for="ReviewerNotes" class="form-control" rows="4"
                                      placeholder="Add any notes for the purchaser regarding your decision..."></textarea>
                        </div>

                        <hr class="my-4" />

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Details", "Units", new { id = Model.UnitId })" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Submit Decision
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
