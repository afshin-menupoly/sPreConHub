@model PreConHub.Models.ViewModels.ReviewExtensionRequestViewModel
@{
    ViewData["Title"] = "Review Extension Request";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Projects")">Projects</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Details", "Units", new { id = Model.UnitId })">Unit @Model.UnitNumber</a></li>
                        <li class="breadcrumb-item active">Review Extension Request</li>
                    </ol>
                </nav>
                <h1 class="h3 mb-1">
                    <i class="bi bi-calendar-check text-primary me-2"></i>Review Extension Request
                </h1>
                <p class="text-muted">Unit @Model.UnitNumber — @Model.ProjectName</p>
            </div>

            <!-- Request Summary Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-person me-2"></i>Request Details</h6>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="text-muted small">Purchaser</div>
                            <div class="fw-bold">@Model.PurchaserName</div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-muted small">Request Submitted</div>
                            <div class="fw-bold">@Model.RequestedDate.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-muted small">Current / Original Closing Date</div>
                            <div class="fw-bold text-danger">@Model.OriginalClosingDate.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-muted small">Requested New Closing Date</div>
                            <div class="fw-bold text-success">@Model.RequestedNewClosingDate.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="col-12">
                            <div class="text-muted small mb-1">Reason Provided</div>
                            <div class="border rounded p-3 bg-light">@(string.IsNullOrWhiteSpace(Model.Reason) ? "No reason provided." : Model.Reason)</div>
                        </div>
                    </div>
                </div>
            </div>

            @{
                var daysAdded = (int)(Model.RequestedNewClosingDate - Model.OriginalClosingDate).TotalDays;
            }

            <!-- SOA Impact Warning (shown when Approve is selected) -->
            <div id="soaWarning" class="alert alert-warning border border-warning shadow-sm mb-4" style="display:none;">
                <div class="d-flex align-items-start gap-3">
                    <i class="bi bi-exclamation-triangle-fill text-warning fs-3 flex-shrink-0 mt-1"></i>
                    <div class="flex-grow-1">
                        <h6 class="fw-bold mb-2">SOA Will Be Automatically Recalculated</h6>
                        <p class="mb-2">
                            Approving this extension adds <strong>@daysAdded day(s)</strong> to the closing schedule.
                            The following SOA components will change:
                        </p>
                        <ul class="mb-2 small">
                            <li><strong>Deposit interest</strong> — each rate period recalculated up to the new closing date</li>
                            <li><strong>Interest on deposit interest</strong> — calculated over a longer occupancy-to-closing span</li>
                            <li><strong>Land tax adjustment</strong> — purchaser's share recalculated against the new closing date</li>
                            <li><strong>Common expense adjustment</strong> — vendor days recalculated for the closing month</li>
                            <li><strong>Occupancy fees chargeable</strong> — extended by @daysAdded day(s)</li>
                            <li><strong>Balance Due on Closing</strong> — will change; notify the purchaser of the updated amount</li>
                        </ul>
                        <div class="alert alert-light border mb-0 py-2">
                            <i class="bi bi-info-circle me-1 text-primary"></i>
                            The SOA recalculates automatically when you click <strong>Submit Decision</strong>.
                            Review the updated SOA on the unit page immediately after.
                        </div>
                    </div>
                </div>
            </div>

            <!-- Review Form -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Your Decision</h6>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ReviewExtensionRequest" method="post" id="decisionForm">
                        <input type="hidden" asp-for="RequestId" />
                        <input type="hidden" asp-for="UnitId" />
                        <input type="hidden" asp-for="UnitNumber" />
                        <input type="hidden" asp-for="ProjectName" />
                        <input type="hidden" asp-for="PurchaserName" />
                        <input type="hidden" asp-for="OriginalClosingDate" />
                        <input type="hidden" asp-for="RequestedNewClosingDate" />
                        <input type="hidden" asp-for="Reason" />
                        <input type="hidden" asp-for="RequestedDate" />

                        <!-- Approve / Reject -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Decision <span class="text-danger">*</span></label>
                            <div class="d-flex gap-3 mb-2">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Approve" id="approveYes"
                                           value="true" @(Model.Approve ? "checked" : "") />
                                    <label class="form-check-label text-success fw-semibold" for="approveYes">
                                        <i class="bi bi-check-circle me-1"></i>Approve
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Approve" id="approveNo"
                                           value="false" @(!Model.Approve ? "checked" : "") />
                                    <label class="form-check-label text-danger fw-semibold" for="approveNo">
                                        <i class="bi bi-x-circle me-1"></i>Reject
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Acknowledgement checkbox (shown only when Approve is selected) -->
                        <div id="acknowledgeSection" class="mb-4" style="display:none;">
                            <div class="form-check border border-warning rounded p-3 bg-warning bg-opacity-10">
                                <input class="form-check-input" type="checkbox" id="soaAcknowledge" />
                                <label class="form-check-label fw-semibold" for="soaAcknowledge">
                                    I understand the SOA will be recalculated and the Balance Due on Closing will change.
                                    I will notify the purchaser of the updated closing amount.
                                </label>
                            </div>
                        </div>

                        <!-- Reviewer Notes -->
                        <div class="mb-4">
                            <label asp-for="ReviewerNotes" class="form-label fw-bold">Notes (Optional)</label>
                            <textarea asp-for="ReviewerNotes" class="form-control" rows="4"
                                      placeholder="Add any notes for the purchaser regarding your decision..."></textarea>
                        </div>

                        <hr class="my-4" />

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Details", "Units", new { id = Model.UnitId })" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="bi bi-check-lg me-2"></i>Submit Decision
                            </button>
                        </div>
                    </form>
                </div>
            </div>

@section Scripts {
<script>
    (function () {
        var approveYes = document.getElementById('approveYes');
        var approveNo  = document.getElementById('approveNo');
        var soaWarning = document.getElementById('soaWarning');
        var ackSection = document.getElementById('acknowledgeSection');
        var ackBox     = document.getElementById('soaAcknowledge');
        var form       = document.getElementById('decisionForm');
        var errDiv     = null;

        function updateUI() {
            if (approveYes.checked) {
                soaWarning.style.display = '';
                ackSection.style.display = '';
            } else {
                soaWarning.style.display = 'none';
                ackSection.style.display = 'none';
                ackBox.checked = false;
                if (errDiv) { errDiv.remove(); errDiv = null; }
            }
        }

        approveYes.addEventListener('change', updateUI);
        approveNo.addEventListener('change', updateUI);

        form.addEventListener('submit', function (e) {
            if (approveYes.checked && !ackBox.checked) {
                e.preventDefault();
                ackBox.classList.add('is-invalid');
                if (!errDiv) {
                    errDiv = document.createElement('div');
                    errDiv.className = 'text-danger small mt-2';
                    errDiv.innerHTML = '<i class="bi bi-exclamation-circle me-1"></i>Please check the box above to acknowledge the SOA impact before approving.';
                    ackSection.appendChild(errDiv);
                }
                soaWarning.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        });

        ackBox.addEventListener('change', function () {
            if (this.checked) {
                this.classList.remove('is-invalid');
                if (errDiv) { errDiv.remove(); errDiv = null; }
            }
        });

        updateUI();
    })();
</script>
}
        </div>
    </div>
</div>
