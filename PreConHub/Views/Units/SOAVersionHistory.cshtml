@model PreConHub.Models.ViewModels.SOAVersionHistoryViewModel
@{
    ViewData["Title"] = $"SOA Version History — Unit {Model.UnitNumber}";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Details", "Units", new { id = Model.UnitId })">Unit @Model.UnitNumber</a>
            </li>
            <li class="breadcrumb-item active">SOA Version History</li>
        </ol>
    </nav>

    <h1 class="h3 mb-1">
        <i class="bi bi-clock-history text-primary me-2"></i>SOA Version History
    </h1>
    <p class="text-muted mb-4">
        @Model.ProjectName — Unit @Model.UnitNumber
        <span class="ms-2 badge bg-secondary">@Model.Versions.Count version(s)</span>
    </p>

    @if (!Model.Versions.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No SOA versions recorded yet.
            Versions are created automatically when SOA is calculated or when a lawyer uploads an SOA document.
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width:60px">#</th>
                                <th>Source</th>
                                <th class="text-end">Balance Due</th>
                                <th class="text-end">Vendor Credits</th>
                                <th class="text-end">Purchaser Credits</th>
                                <th class="text-end">Cash Required</th>
                                <th>Created By</th>
                                <th>Date</th>
                                <th>Notes</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model.Versions)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-dark">v@(v.VersionNumber)</span>
                                    </td>
                                    <td>
                                        <span class="badge @v.SourceBadgeClass">
                                            @if (v.Source == "SystemCalculation")
                                            {
                                                <i class="bi bi-calculator me-1"></i>
                                            }
                                            else if (v.Source == "LawyerUpload")
                                            {
                                                <i class="bi bi-upload me-1"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-building me-1"></i>
                                            }
                                            @v.SourceDisplayName
                                        </span>
                                    </td>
                                    <td class="text-end fw-semibold">@v.BalanceDueOnClosing.ToString("C2")</td>
                                    <td class="text-end">@v.TotalVendorCredits.ToString("C2")</td>
                                    <td class="text-end">@v.TotalPurchaserCredits.ToString("C2")</td>
                                    <td class="text-end">@v.CashRequiredToClose.ToString("C2")</td>
                                    <td>
                                        <span class="small">@v.CreatedByName</span>
                                        <br />
                                        <span class="text-muted small">@v.CreatedByRole</span>
                                    </td>
                                    <td class="text-muted small">
                                        @v.CreatedAt.ToString("MMM dd, yyyy")
                                        <br />
                                        @v.CreatedAt.ToString("h:mm tt")
                                    </td>
                                    <td class="small text-muted" style="max-width:200px;">
                                        @(v.Notes ?? "—")
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(v.UploadedFilePath))
                                        {
                                            <a href="@v.UploadedFilePath" target="_blank"
                                               class="btn btn-sm btn-outline-primary" title="Download uploaded SOA">
                                                <i class="bi bi-file-earmark-pdf"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @* Diff comparison between consecutive versions *@
        @if (Model.Versions.Count >= 2)
        {
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-arrows-expand me-2"></i>Version Comparison
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @{
                            var latest = Model.Versions.First();
                            var previous = Model.Versions.Skip(1).First();
                            var balanceDiff = latest.BalanceDueOnClosing - previous.BalanceDueOnClosing;
                            var vendorDiff = latest.TotalVendorCredits - previous.TotalVendorCredits;
                            var purchaserDiff = latest.TotalPurchaserCredits - previous.TotalPurchaserCredits;
                            var cashDiff = latest.CashRequiredToClose - previous.CashRequiredToClose;
                        }
                        <div class="col-md-6">
                            <h6 class="text-muted">
                                <span class="badge bg-dark me-1">v@(previous.VersionNumber)</span>
                                @previous.SourceDisplayName
                                <small class="ms-2">@previous.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </h6>
                            <table class="table table-sm">
                                <tr><td>Balance Due</td><td class="text-end">@previous.BalanceDueOnClosing.ToString("C2")</td></tr>
                                <tr><td>Vendor Credits</td><td class="text-end">@previous.TotalVendorCredits.ToString("C2")</td></tr>
                                <tr><td>Purchaser Credits</td><td class="text-end">@previous.TotalPurchaserCredits.ToString("C2")</td></tr>
                                <tr><td>Cash Required</td><td class="text-end">@previous.CashRequiredToClose.ToString("C2")</td></tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">
                                <span class="badge bg-dark me-1">v@(latest.VersionNumber)</span>
                                @latest.SourceDisplayName
                                <small class="ms-2">@latest.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </h6>
                            <table class="table table-sm">
                                <tr>
                                    <td>Balance Due</td>
                                    <td class="text-end">
                                        @latest.BalanceDueOnClosing.ToString("C2")
                                        @if (balanceDiff != 0)
                                        {
                                            <span class="ms-1 small @(balanceDiff > 0 ? "text-danger" : "text-success")">
                                                (@(balanceDiff > 0 ? "+" : "")@balanceDiff.ToString("C2"))
                                            </span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Vendor Credits</td>
                                    <td class="text-end">
                                        @latest.TotalVendorCredits.ToString("C2")
                                        @if (vendorDiff != 0)
                                        {
                                            <span class="ms-1 small @(vendorDiff > 0 ? "text-success" : "text-danger")">
                                                (@(vendorDiff > 0 ? "+" : "")@vendorDiff.ToString("C2"))
                                            </span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Purchaser Credits</td>
                                    <td class="text-end">
                                        @latest.TotalPurchaserCredits.ToString("C2")
                                        @if (purchaserDiff != 0)
                                        {
                                            <span class="ms-1 small @(purchaserDiff > 0 ? "text-success" : "text-danger")">
                                                (@(purchaserDiff > 0 ? "+" : "")@purchaserDiff.ToString("C2"))
                                            </span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Cash Required</td>
                                    <td class="text-end">
                                        @latest.CashRequiredToClose.ToString("C2")
                                        @if (cashDiff != 0)
                                        {
                                            <span class="ms-1 small @(cashDiff > 0 ? "text-danger" : "text-success")">
                                                (@(cashDiff > 0 ? "+" : "")@cashDiff.ToString("C2"))
                                            </span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    <div class="mt-3">
        <a href="@Url.Action("Details", "Units", new { id = Model.UnitId })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Unit Details
        </a>
    </div>
</div>
