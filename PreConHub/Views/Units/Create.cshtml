@model PreConHub.Models.ViewModels.CreateUnitViewModel
@{
    ViewData["Title"] = "Add New Unit";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Projects")">Projects</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Projects", new { id = Model.ProjectId })">@ViewBag.ProjectName</a></li>
                        <li class="breadcrumb-item active">Add Unit</li>
                    </ol>
                </nav>
                <h1 class="h3 mb-1">Add New Unit</h1>
                <p class="text-muted">Add a unit to @ViewBag.ProjectName</p>
            </div>

            <!-- Form Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="ProjectId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Unit Information -->
                        <h5 class="mb-3 pb-2 border-bottom">
                            <i class="bi bi-house-door me-2 text-primary"></i>Unit Information
                        </h5>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="UnitNumber" class="form-label">Unit Number <span class="text-danger">*</span></label>
                                <input asp-for="UnitNumber" class="form-control" placeholder="e.g., 1201" />
                                <span asp-validation-for="UnitNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="FloorNumber" class="form-label">Floor</label>
                                <input asp-for="FloorNumber" class="form-control" placeholder="e.g., 12" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="UnitType" class="form-label">Unit Type</label>
                                <select asp-for="UnitType" class="form-select" asp-items="Html.GetEnumSelectList<PreConHub.Models.Entities.UnitType>()">
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Bedrooms" class="form-label">Bedrooms</label>
                                <input asp-for="Bedrooms" type="number" class="form-control" min="0" value="1" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Bathrooms" class="form-label">Bathrooms</label>
                                <input asp-for="Bathrooms" type="number" class="form-control" min="1" value="1" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="SquareFootage" class="form-label">Square Footage</label>
                                <input asp-for="SquareFootage" type="number" step="0.01" class="form-control" placeholder="e.g., 650" />
                            </div>
                        </div>

                        <!-- Pricing -->
                        <h5 class="mb-3 pb-2 border-bottom mt-4">
                            <i class="bi bi-currency-dollar me-2 text-primary"></i>Pricing
                        </h5>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="PurchasePrice" class="form-label">Purchase Price (APS) <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PurchasePrice" type="number" step="0.01" class="form-control" placeholder="e.g., 599000" />
                                </div>
                                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Parking & Locker -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-check mb-2">
                                    <input asp-for="HasParking" class="form-check-input" type="checkbox" id="hasParking" onchange="toggleParkingPrice()" />
                                    <label class="form-check-label" for="hasParking">Includes Parking</label>
                                </div>
                                <div id="parkingPriceDiv" style="display: none;">
                                    <label asp-for="ParkingPrice" class="form-label">Parking Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="ParkingPrice" type="number" step="0.01" class="form-control" placeholder="e.g., 65000" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mb-2">
                                    <input asp-for="HasLocker" class="form-check-input" type="checkbox" id="hasLocker" onchange="toggleLockerPrice()" />
                                    <label class="form-check-label" for="hasLocker">Includes Locker</label>
                                </div>
                                <div id="lockerPriceDiv" style="display: none;">
                                    <label asp-for="LockerPrice" class="form-label">Locker Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="LockerPrice" type="number" step="0.01" class="form-control" placeholder="e.g., 8000" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Dates -->
                        <h5 class="mb-3 pb-2 border-bottom mt-4">
                            <i class="bi bi-calendar me-2 text-primary"></i>Dates (Optional)
                        </h5>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="OccupancyDate" class="form-label">Occupancy Date</label>
                                <input asp-for="OccupancyDate" type="date" class="form-control" />
                                <div class="form-text">Leave blank to use project default</div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ClosingDate" class="form-label">Closing Date</label>
                                <input asp-for="ClosingDate" type="date" class="form-control" />
                                <div class="form-text">Leave blank to use project default</div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Dashboard", "Projects", new { id = Model.ProjectId })" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                            <div>
                                <button type="submit" name="saveAndAddAnother" value="true" class="btn btn-outline-primary me-2">
                                    <i class="bi bi-plus-lg me-2"></i>Save & Add Another
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg me-2"></i>Save Unit
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Add Multiple -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body">
                    <h6><i class="bi bi-lightning me-2"></i>Need to add many units?</h6>
                    <p class="text-muted small mb-2">Use bulk import to upload a CSV file with all your units at once.</p>
                    <a href="@Url.Action("BulkImport", "Units", new { id = Model.ProjectId })" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-upload me-1"></i>Bulk Import
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleParkingPrice() {
            var checkbox = document.getElementById('hasParking');
            var priceDiv = document.getElementById('parkingPriceDiv');
            priceDiv.style.display = checkbox.checked ? 'block' : 'none';
        }

        function toggleLockerPrice() {
            var checkbox = document.getElementById('hasLocker');
            var priceDiv = document.getElementById('lockerPriceDiv');
            priceDiv.style.display = checkbox.checked ? 'block' : 'none';
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            toggleParkingPrice();
            toggleLockerPrice();
        });
    </script>
}
