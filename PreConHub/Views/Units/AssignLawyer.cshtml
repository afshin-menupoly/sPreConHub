@{
    ViewData["Title"] = "Assign Lawyer";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Projects")">Projects</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Projects", new { id = ViewBag.ProjectId })">@ViewBag.ProjectName</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Details", "Units", new { id = ViewBag.UnitId })">Unit @ViewBag.UnitNumber</a></li>
                        <li class="breadcrumb-item active">Assign Lawyer</li>
                    </ol>
                </nav>
                <h1 class="h3 mb-1">
                    <i class="bi bi-briefcase text-primary me-2"></i>Assign Lawyer
                </h1>
                <p class="text-muted">Unit @ViewBag.UnitNumber at @ViewBag.ProjectName</p>
            </div>

            <!-- Existing Lawyer Warning -->
            @if (ViewBag.ExistingLawyer != null)
            {
                var existingLawyer = (PreConHub.Models.Entities.ApplicationUser)ViewBag.ExistingLawyer;
                <div class="alert alert-warning mb-4">
                    <h6 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Existing Assignment</h6>
                    <p class="mb-2">
                        This unit is currently assigned to <strong>@existingLawyer.FirstName @existingLawyer.LastName</strong>
                        (@existingLawyer.Email)
                    </p>
                    <p class="mb-0 small">Assigning a new lawyer will deactivate the current assignment.</p>
                </div>
            }

            <!-- Form Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="AssignLawyer" method="post">
                        <input type="hidden" name="unitId" value="@ViewBag.UnitId" />

                        <h5 class="mb-3 pb-2 border-bottom">
                            <i class="bi bi-person me-2 text-primary"></i>Lawyer Information
                        </h5>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">First Name <span class="text-danger">*</span></label>
                                <input type="text" name="lawyerFirstName" class="form-control" placeholder="Sarah" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Last Name <span class="text-danger">*</span></label>
                                <input type="text" name="lawyerLastName" class="form-control" placeholder="Johnson" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email Address <span class="text-danger">*</span></label>
                            <input type="email" name="lawyerEmail" class="form-control" placeholder="sarah.johnson@lawfirm.ca" required />
                            <div class="form-text">Invitation will be sent to this email address</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" name="lawyerPhone" class="form-control" placeholder="(416) 555-9999" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Law Firm</label>
                                <input type="text" name="lawFirm" class="form-control" placeholder="Johnson & Associates LLP" />
                            </div>
                        </div>

                        <!-- Send Invitation Option -->
                        <div class="alert alert-info mb-4">
                            <div class="form-check">
                                <input type="checkbox" name="sendInvitation" value="true" class="form-check-input" id="sendInvitation" checked>
                                <label class="form-check-label" for="sendInvitation">
                                    <strong>Send Invitation Email</strong>
                                </label>
                            </div>
                            <p class="mb-0 mt-2 small">
                                <i class="bi bi-envelope me-1"></i>
                                An email invitation will be generated for the lawyer to access the review portal.
                            </p>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Details", "Units", new { id = ViewBag.UnitId })" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-briefcase me-2"></i>Assign Lawyer
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card border-0 shadow-sm mt-4 bg-light">
                <div class="card-body">
                    <h6><i class="bi bi-info-circle me-2 text-primary"></i>What Lawyers Can Do</h6>
                    <ul class="small mb-0">
                        <li>Review unit details and Statement of Adjustments</li>
                        <li>View purchaser mortgage and financial information</li>
                        <li>Add notes and flag concerns</li>
                        <li>Approve units for closing or request revisions</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
