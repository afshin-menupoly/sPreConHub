@model PreConHub.Models.ViewModels.BuyerLawyerReviewViewModel
@using PreConHub.Models.Entities
@{
    ViewData["Title"] = $"Review Unit {Model.UnitNumber}";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "BuyerLawyer")">Dashboard</a></li>
                    <li class="breadcrumb-item active">Review Unit @Model.UnitNumber</li>
                </ol>
            </nav>
            <h1 class="h3 mb-1">
                <i class="bi bi-briefcase-fill me-2" style="color: #6f42c1;"></i>Unit @Model.UnitNumber
            </h1>
            <p class="text-muted mb-0">@Model.ProjectName â€” @Model.ProjectAddress</p>
        </div>
        <div class="text-end">
            <span class="badge bg-@GetReviewStatusClass() fs-6 p-2">
                @Model.ReviewStatus
            </span>
            @if (Model.ClosingDate.HasValue)
            {
                var daysLeft = (int)(Model.ClosingDate.Value - DateTime.Now).TotalDays;
                <div class="mt-2">
                    <small class="text-muted">Closing: @Model.ClosingDate.Value.ToString("MMM dd, yyyy")</small>
                    @if (daysLeft > 0 && daysLeft <= 30)
                    {
                        <span class="badge bg-warning text-dark ms-2">@daysLeft days left</span>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Left Column: Unit, Purchaser, Mortgage, Personal Funds -->
        <div class="col-lg-4">
            <!-- Unit Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-building me-2" style="color: #6f42c1;"></i>Unit Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-borderless mb-0">
                        <tr>
                            <td class="text-muted">Unit Number</td>
                            <td class="fw-bold">@Model.UnitNumber</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Type</td>
                            <td>@Model.UnitType</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Bedrooms</td>
                            <td>@Model.Bedrooms</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Bathrooms</td>
                            <td>@Model.Bathrooms</td>
                        </tr>
                        @if (Model.SquareFootage > 0)
                        {
                            <tr>
                                <td class="text-muted">Size</td>
                                <td>@Model.SquareFootage sq ft</td>
                            </tr>
                        }
                        <tr>
                            <td class="text-muted">Purchase Price</td>
                            <td class="fw-bold text-success">$@Model.PurchasePrice.ToString("N0")</td>
                        </tr>
                        @if (Model.OccupancyDate.HasValue)
                        {
                            <tr>
                                <td class="text-muted">Occupancy</td>
                                <td>@Model.OccupancyDate.Value.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                        <tr>
                            <td class="text-muted">Closing</td>
                            <td class="fw-bold">@(Model.ClosingDate?.ToString("MMM dd, yyyy") ?? "TBD")</td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Purchaser Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-person me-2" style="color: #6f42c1;"></i>Purchaser</h5>
                </div>
                <div class="card-body">
                    <h6>@Model.PurchaserName</h6>
                    @if (!string.IsNullOrEmpty(Model.PurchaserEmail))
                    {
                        <p class="mb-1"><i class="bi bi-envelope me-2 text-muted"></i>@Model.PurchaserEmail</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.PurchaserPhone))
                    {
                        <p class="mb-1"><i class="bi bi-phone me-2 text-muted"></i>@Model.PurchaserPhone</p>
                    }
                    @if (Model.CoPurchasers.Any())
                    {
                        <hr />
                        <small class="text-muted">Co-Purchasers:</small>
                        <ul class="mb-0 small">
                            @foreach (var co in Model.CoPurchasers)
                            {
                                <li>@co</li>
                            }
                        </ul>
                    }
                </div>
            </div>

            <!-- Mortgage Information (Detailed for Buyer's Lawyer) -->
            <div class="card border-0 shadow-sm mb-4 @(Model.HasMortgageApproval ? "" : "border-danger border-2")">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-bank me-2" style="color: #6f42c1;"></i>Mortgage</h5>
                </div>
                <div class="card-body">
                    @if (Model.HasMortgageApproval)
                    {
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-check-circle-fill text-success fs-4 me-2"></i>
                            <span class="fw-bold text-success">Approved</span>
                        </div>
                        <table class="table table-sm table-borderless mb-0">
                            <tr>
                                <td class="text-muted">Lender</td>
                                <td>@(Model.MortgageProvider ?? "N/A")</td>
                            </tr>
                            <tr>
                                <td class="text-muted">Amount</td>
                                <td class="fw-bold">$@Model.MortgageAmount.ToString("N0")</td>
                            </tr>
                            <tr>
                                <td class="text-muted">Approval Type</td>
                                <td>@Model.MortgageApprovalType</td>
                            </tr>
                            @if (Model.MortgageExpiryDate.HasValue)
                            {
                                var expired = Model.MortgageExpiryDate.Value < DateTime.Now;
                                <tr>
                                    <td class="text-muted">Expires</td>
                                    <td class="@(expired ? "text-danger fw-bold" : "")">
                                        @Model.MortgageExpiryDate.Value.ToString("MMM dd, yyyy")
                                        @if (expired)
                                        {
                                            <span class="badge bg-danger ms-1">EXPIRED</span>
                                        }
                                    </td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.MortgageConditions))
                            {
                                <tr>
                                    <td class="text-muted">Conditions</td>
                                    <td><small>@Model.MortgageConditions</small></td>
                                </tr>
                            }
                            @if (Model.CreditScore.HasValue)
                            {
                                <tr>
                                    <td class="text-muted">Credit Score</td>
                                    <td>
                                        <span class="fw-bold @(Model.CreditScore >= 700 ? "text-success" : Model.CreditScore >= 600 ? "text-warning" : "text-danger")">
                                            @Model.CreditScore
                                        </span>
                                    </td>
                                </tr>
                            }
                            @if (Model.InterestRate.HasValue)
                            {
                                <tr>
                                    <td class="text-muted">Interest Rate</td>
                                    <td>@Model.InterestRate.Value.ToString("N2")%</td>
                                </tr>
                            }
                            @if (Model.AmortizationYears.HasValue)
                            {
                                <tr>
                                    <td class="text-muted">Amortization</td>
                                    <td>@Model.AmortizationYears years</td>
                                </tr>
                            }
                        </table>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-circle-fill text-danger fs-4 me-2"></i>
                            <span class="fw-bold text-danger">No Mortgage Approval</span>
                        </div>
                        <p class="small text-muted mt-2 mb-0">
                            Purchaser has not submitted mortgage approval documentation.
                        </p>
                    }
                </div>
            </div>

            <!-- Personal Funds -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-wallet2 me-2" style="color: #6f42c1;"></i>Personal Funds</h5>
                    <span class="badge" style="background-color: #6f42c1;">$@Model.TotalFundsAvailable.ToString("N0") total</span>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-borderless mb-0">
                        @if (Model.RRSPAvailable > 0)
                        {
                            <tr>
                                <td class="text-muted">RRSP (HBP)</td>
                                <td class="text-end">$@Model.RRSPAvailable.ToString("N0")</td>
                            </tr>
                        }
                        @if (Model.GiftFromFamily > 0)
                        {
                            <tr>
                                <td class="text-muted">Gift from Family</td>
                                <td class="text-end">$@Model.GiftFromFamily.ToString("N0")</td>
                            </tr>
                        }
                        @if (Model.ProceedsFromSale > 0)
                        {
                            <tr>
                                <td class="text-muted">Proceeds from Sale</td>
                                <td class="text-end">$@Model.ProceedsFromSale.ToString("N0")</td>
                            </tr>
                        }
                        @if (Model.OtherFundsAmount > 0)
                        {
                            <tr>
                                <td class="text-muted">
                                    Other Funds
                                    @if (!string.IsNullOrEmpty(Model.OtherFundsDescription))
                                    {
                                        <br /><small>(@Model.OtherFundsDescription)</small>
                                    }
                                </td>
                                <td class="text-end">$@Model.OtherFundsAmount.ToString("N0")</td>
                            </tr>
                        }
                        @if (Model.AdditionalCashAvailable > 0)
                        {
                            <tr>
                                <td class="text-muted">Additional Cash</td>
                                <td class="text-end">$@Model.AdditionalCashAvailable.ToString("N0")</td>
                            </tr>
                        }
                        <tr class="fw-bold border-top">
                            <td>Total Funds Available</td>
                            <td class="text-end">$@Model.TotalFundsAvailable.ToString("N0")</td>
                        </tr>
                    </table>

                    @if (Model.HasExistingPropertyToSell)
                    {
                        <hr />
                        <h6 class="text-muted small mb-2">Existing Property</h6>
                        <table class="table table-sm table-borderless mb-0">
                            <tr>
                                <td class="text-muted">Estimated Value</td>
                                <td class="text-end">$@Model.ExistingPropertyValue.ToString("N0")</td>
                            </tr>
                            <tr>
                                <td class="text-muted">Mortgage Balance</td>
                                <td class="text-end">$@Model.ExistingMortgageBalance.ToString("N0")</td>
                            </tr>
                            <tr class="border-top">
                                <td class="text-muted fw-bold">Estimated Equity</td>
                                <td class="text-end fw-bold">$@((Model.ExistingPropertyValue - Model.ExistingMortgageBalance).ToString("N0"))</td>
                            </tr>
                        </table>
                    }
                </div>
            </div>

            <!-- Deposits -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-cash-stack me-2" style="color: #6f42c1;"></i>Deposits</h5>
                    <span class="badge" style="background-color: #6f42c1;">$@Model.TotalDepositsPaid.ToString("N0") paid</span>
                </div>
                <div class="card-body p-0">
                    @if (Model.Deposits.Any())
                    {
                        <table class="table table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-center">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var deposit in Model.Deposits)
                                {
                                    <tr>
                                        <td>@deposit.DepositName</td>
                                        <td class="text-end">$@deposit.Amount.ToString("N0")</td>
                                        <td class="text-center">
                                            @if (deposit.IsPaid)
                                            {
                                                <span class="badge bg-success">Paid</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center py-3 text-muted">No deposits recorded</div>
                    }
                </div>
            </div>
        </div>

        <!-- Middle Column: SOA -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-calculator me-2" style="color: #6f42c1;"></i>Statement of Adjustments</h5>
                    @if (Model.SOA != null)
                    {
                        <a asp-controller="BuyerLawyer" asp-action="DownloadSOA" asp-route-id="@Model.UnitId"
                           class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-download me-1"></i>PDF
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (Model.SOA != null)
                    {
                        <div class="mb-3">
                            <small class="text-muted">Last calculated: @Model.SOA.CalculatedAt.ToString("MMM dd, yyyy h:mm tt")</small>
                        </div>

                        <!-- Sale Price Breakdown -->
                        <h6 class="border-bottom pb-2 mb-2 mt-3" style="color: #6f42c1;">Sale Price</h6>
                        <table class="table table-sm table-borderless">
                            <tr><td>Dwelling</td><td class="text-end">$@Model.SOA.PurchasePrice.ToString("N0")</td></tr>
                            @if (Model.SOA.ParkingPrice > 0)
                            {
                                <tr><td>Parking</td><td class="text-end">$@Model.SOA.ParkingPrice.ToString("N0")</td></tr>
                            }
                            @if (Model.SOA.LockerPrice > 0)
                            {
                                <tr><td>Locker</td><td class="text-end">$@Model.SOA.LockerPrice.ToString("N0")</td></tr>
                            }
                            <tr class="fw-bold border-top"><td>Sale Price</td><td class="text-end">$@Model.SOA.SalePrice.ToString("N0")</td></tr>
                        </table>

                        <!-- Adjusted Sale Price -->
                        <h6 class="border-bottom pb-2 mb-2 mt-3" style="color: #6f42c1;">Adjusted Sale Price</h6>
                        <table class="table table-sm table-borderless">
                            <tr><td>Addtl. Consideration</td><td class="text-end">$@Model.SOA.AdditionalConsideration.ToString("N0")</td></tr>
                            <tr class="fw-bold"><td>Total Sale Price</td><td class="text-end">$@Model.SOA.TotalSalePrice.ToString("N0")</td></tr>
                            <tr><td>Federal HST (5%)</td><td class="text-end">$@Model.SOA.FederalHST.ToString("N0")</td></tr>
                            <tr><td>Provincial HST (8%)</td><td class="text-end">$@Model.SOA.ProvincialHST.ToString("N0")</td></tr>
                            @if (Model.SOA.HSTRebateFederal + Model.SOA.HSTRebateOntario > 0)
                            {
                                <tr><td>Less: HST Rebates</td><td class="text-end text-success">($@((Model.SOA.HSTRebateFederal + Model.SOA.HSTRebateOntario).ToString("N0")))</td></tr>
                            }
                            <tr class="fw-bold border-top bg-light"><td>Net Sale Price</td><td class="text-end">$@Model.SOA.NetSalePrice.ToString("N0")</td></tr>
                        </table>

                        <!-- Credit Vendor -->
                        <h6 class="text-muted border-bottom pb-2 mb-2 mt-3">Credit Vendor</h6>
                        <table class="table table-sm table-borderless">
                            @if (Model.SOA.PropertyTaxAdjustment > 0)
                            {
                                <tr><td>Property Tax Adj.</td><td class="text-end">$@Model.SOA.PropertyTaxAdjustment.ToString("N0")</td></tr>
                            }
                            @if (Model.SOA.CommonExpenseAdjustment > 0)
                            {
                                <tr><td>Common Expense Adj.</td><td class="text-end">$@Model.SOA.CommonExpenseAdjustment.ToString("N0")</td></tr>
                            }
                            @if (Model.SOA.ReserveFundContribution > 0)
                            {
                                <tr><td>Reserve Fund (2 mo.)</td><td class="text-end">$@Model.SOA.ReserveFundContribution.ToString("N0")</td></tr>
                            }
                            @if (Model.SOA.CommonExpensesFirstMonth > 0)
                            {
                                <tr><td>Common Exp. 1st Month</td><td class="text-end">$@Model.SOA.CommonExpensesFirstMonth.ToString("N0")</td></tr>
                            }
                            <tr class="fw-bold border-top">
                                <td>Total Credit Vendor</td>
                                <td class="text-end text-danger">$@Model.SOA.TotalVendorCredits.ToString("N0")</td>
                            </tr>
                        </table>

                        <!-- Credit Purchaser -->
                        <h6 class="text-muted border-bottom pb-2 mb-2 mt-3">Credit Purchaser</h6>
                        <table class="table table-sm table-borderless">
                            <tr><td>Deposits Paid</td><td class="text-end">$@Model.SOA.DepositsPaid.ToString("N0")</td></tr>
                            @if (Model.SOA.DepositInterest > 0)
                            {
                                <tr><td>Deposit Interest</td><td class="text-end">$@Model.SOA.DepositInterest.ToString("N0")</td></tr>
                            }
                            @if (Model.SOA.OccupancyFeesPaid > 0)
                            {
                                <tr><td>Occupancy Fees Paid</td><td class="text-end">$@Model.SOA.OccupancyFeesPaid.ToString("N0")</td></tr>
                            }
                            @if (Model.SOA.MortgageAmount > 0)
                            {
                                <tr><td>Mortgage Proceeds</td><td class="text-end">$@Model.SOA.MortgageAmount.ToString("N0")</td></tr>
                            }
                            @if (Model.SOA.BuilderCredits > 0)
                            {
                                <tr><td>Builder Credits</td><td class="text-end">$@Model.SOA.BuilderCredits.ToString("N0")</td></tr>
                            }
                            <tr class="fw-bold border-top">
                                <td>Total Credit Purchaser</td>
                                <td class="text-end text-success">$@Model.SOA.TotalPurchaserCredits.ToString("N0")</td>
                            </tr>
                        </table>

                        <!-- Balance -->
                        <div class="alert @(Model.SOA.CashRequiredToClose > 0 ? "alert-warning" : "alert-success") mt-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <strong>Cash Required to Close:</strong>
                                <span class="fs-5 fw-bold">$@Model.SOA.CashRequiredToClose.ToString("N0")</span>
                            </div>
                        </div>

                        <!-- LTT Info -->
                        @if (Model.SOA.LandTransferTax > 0)
                        {
                            <div class="small text-muted mt-2">
                                <strong>LTT (at registration):</strong>
                                ON: $@Model.SOA.LandTransferTax.ToString("N0")
                                @if (Model.SOA.TorontoLandTransferTax > 0)
                                {
                                    <text> | TO: $@Model.SOA.TorontoLandTransferTax.ToString("N0")</text>
                                }
                            </div>
                        }

                        <!-- Lawyer SOA Confirmation Status -->
                        @if (Model.SOA.IsLawyerSOAConfirmed)
                        {
                            <div class="alert alert-success mt-3">
                                <h6 class="alert-heading mb-2">
                                    <i class="bi bi-check-circle-fill me-2"></i>Builder's Lawyer SOA Confirmed
                                </h6>
                                <p class="small mb-0">
                                    Confirmed by <strong>@Model.SOA.LawyerSOAConfirmedByRole</strong>
                                    on @Model.SOA.LawyerSOAConfirmedAt?.ToString("MMM dd, yyyy h:mm tt")
                                </p>
                            </div>
                        }
                        else if (Model.SOA.LawyerUploadedBalanceDue.HasValue)
                        {
                            <div class="alert alert-info mt-3">
                                <h6 class="alert-heading mb-2">
                                    <i class="bi bi-info-circle me-2"></i>Builder's Lawyer SOA Pending Confirmation
                                </h6>
                                <p class="small mb-0">
                                    Builder's lawyer has uploaded a balance due of
                                    <strong>$@Model.SOA.LawyerUploadedBalanceDue.Value.ToString("N2")</strong>
                                    but has not yet confirmed.
                                </p>
                            </div>
                        }

                        <!-- Shortfall Warning -->
                        @if (Model.ShortfallAmount > 0)
                        {
                            <div class="alert alert-danger mt-3">
                                <h6 class="alert-heading mb-2">
                                    <i class="bi bi-exclamation-triangle me-2"></i>Shortfall Detected
                                </h6>
                                <table class="table table-sm table-borderless mb-0 small">
                                    <tr>
                                        <td>Shortfall Amount</td>
                                        <td class="text-end fw-bold text-danger">$@Model.ShortfallAmount.ToString("N0")</td>
                                    </tr>
                                    <tr>
                                        <td>Shortfall %</td>
                                        <td class="text-end">@Model.ShortfallPercentage.ToString("N1")%</td>
                                    </tr>
                                    @if (Model.Recommendation.HasValue)
                                    {
                                        <tr>
                                            <td>Recommendation</td>
                                            <td class="text-end">@Model.Recommendation</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-calculator display-4"></i>
                            <p class="mt-2">SOA not yet calculated</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column: Actions, Documents, Notes, Builder's Lawyer Info -->
        <div class="col-lg-4">
            <!-- Review Actions -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header text-white" style="background-color: #6f42c1;">
                    <h5 class="mb-0"><i class="bi bi-check2-square me-2"></i>Review Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.ReviewStatus != LawyerReviewStatus.Approved)
                        {
                            <button class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#approveModal">
                                <i class="bi bi-check-circle me-2"></i>Approve Buyer Info
                            </button>
                        }
                        else
                        {
                            <div class="alert alert-success mb-2">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <strong>Approved</strong> - Buyer information has been verified.
                            </div>
                        }

                        <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#revisionModal">
                            <i class="bi bi-arrow-counterclockwise me-2"></i>Request Revision
                        </button>
                    </div>
                </div>
            </div>

            <!-- Documents -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-folder me-2" style="color: #6f42c1;"></i>Documents</h5>
                </div>
                <div class="card-body">
                    <!-- Purchaser Documents -->
                    @if (Model.PurchaserDocuments.Any())
                    {
                        <h6 class="text-muted small mb-2">Purchaser Documents</h6>
                        <div class="list-group list-group-flush mb-3">
                            @foreach (var doc in Model.PurchaserDocuments)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <div>
                                        <i class="bi bi-file-earmark me-2 text-muted"></i>
                                        <span class="small">@doc.FileName</span>
                                        <br />
                                        <small class="text-muted">@doc.DocumentTypeName &bull; @doc.FileSizeFormatted</small>
                                    </div>
                                    <a asp-controller="BuyerLawyer" asp-action="DownloadDocument" asp-route-id="@doc.Id"
                                       class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-download"></i>
                                    </a>
                                </div>
                            }
                        </div>
                    }

                    <!-- Buyer Lawyer Documents -->
                    @if (Model.BuyerLawyerDocuments.Any())
                    {
                        <h6 class="text-muted small mb-2">Your Documents</h6>
                        <div class="list-group list-group-flush mb-3">
                            @foreach (var doc in Model.BuyerLawyerDocuments)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <div>
                                        <i class="bi bi-file-earmark-check me-2" style="color: #6f42c1;"></i>
                                        <span class="small">@doc.FileName</span>
                                        <br />
                                        <small class="text-muted">@doc.DocumentTypeName &bull; @doc.FileSizeFormatted &bull; @doc.UploadedAtFormatted</small>
                                    </div>
                                    <div class="d-flex gap-1">
                                        <a asp-controller="BuyerLawyer" asp-action="DownloadDocument" asp-route-id="@doc.Id"
                                           class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-download"></i>
                                        </a>
                                        @if (doc.CanDelete)
                                        {
                                            <form asp-controller="BuyerLawyer" asp-action="DeleteDocument" asp-route-id="@doc.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Delete this document?')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Upload Document Form -->
                    <hr />
                    <h6 class="small mb-3"><i class="bi bi-upload me-1"></i>Upload Document</h6>
                    <form asp-controller="BuyerLawyer" asp-action="UploadDocument" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="assignmentId" value="@Model.AssignmentId" />
                        <input type="hidden" name="unitId" value="@Model.UnitId" />

                        <div class="mb-2">
                            <label class="form-label small fw-bold">Document Type <span class="text-danger">*</span></label>
                            <select name="documentType" class="form-select form-select-sm" required>
                                <option value="">Select type...</option>
                                <option value="11">Title Search Report</option>
                                <option value="12">Title Insurance Binder</option>
                                <option value="13">Mortgage Instructions</option>
                                <option value="14">Direction Re: Title</option>
                                <option value="15">Direction Re: Funds</option>
                                <option value="16">Statutory Declaration</option>
                                <option value="17">Requisition Letter</option>
                                <option value="18">Trust Ledger</option>
                                <option value="19">Fire Insurance Binder</option>
                                <option value="20">Closing Report</option>
                                <option value="99">Other</option>
                            </select>
                        </div>

                        <div class="mb-2">
                            <label class="form-label small fw-bold">File <span class="text-danger">*</span></label>
                            <input type="file" name="file" class="form-control form-control-sm" required />
                            <div class="form-text">Maximum file size: 10 MB</div>
                        </div>

                        <div class="mb-2">
                            <label class="form-label small">Description (Optional)</label>
                            <input type="text" name="description" class="form-control form-control-sm"
                                   placeholder="Brief description..." />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-sm" style="background-color: #6f42c1; color: white;">
                                <i class="bi bi-upload me-2"></i>Upload
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Add Note -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-chat-left-text me-2"></i>Add Note</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="BuyerLawyer" asp-action="AddNote" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="assignmentId" value="@Model.AssignmentId" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Note Type</label>
                                <select name="noteType" class="form-select" required>
                                    <option value="0">General Note</option>
                                    <option value="1">Question for Builder</option>
                                    <option value="2">Concern</option>
                                    <option value="3">Revision Request</option>
                                    <option value="4">Approval Note</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Who Can See This?</label>
                                <select name="visibility" class="form-select" required id="noteVisibility">
                                    <option value="0">Only Me (Private)</option>
                                    <option value="3" selected>Purchaser (Recommended)</option>
                                    <option value="2">All Lawyers on This Unit</option>
                                </select>
                                <div class="form-text" id="visibilityHelp">
                                    Purchaser will be notified of this note.
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Note</label>
                            <textarea name="note" class="form-control" rows="4"
                                      placeholder="Enter your note, question, or comment here..." required></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send me-2"></i>Submit Note
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Existing Notes -->
            @if (Model.Notes != null && Model.Notes.Any())
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-journal-text me-2"></i>Your Notes</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            @foreach (var note in Model.Notes.OrderByDescending(n => n.CreatedAt))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <span class="@GetNoteTypeColor(note.NoteType)">
                                                <i class="bi @GetNoteTypeIcon(note.NoteType) me-1"></i>
                                                <strong>@GetNoteTypeDisplay(note.NoteType)</strong>
                                            </span>
                                            @* Visibility Badge *@
                                            @if (note.Visibility == 0)
                                            {
                                                <span class="badge bg-secondary ms-2"><i class="bi bi-lock me-1"></i>Private</span>
                                            }
                                            else if (note.Visibility == 3)
                                            {
                                                <span class="badge ms-2" style="background-color: #6f42c1;"><i class="bi bi-person me-1"></i>Purchaser</span>
                                            }
                                            else if (note.Visibility == 2)
                                            {
                                                <span class="badge bg-info ms-2"><i class="bi bi-people me-1"></i>All Lawyers</span>
                                            }
                                        </div>
                                        <small class="text-muted">@note.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</small>
                                    </div>
                                    <p class="mb-0">@note.Note</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Builder's Lawyer Info -->
            @if (!string.IsNullOrEmpty(Model.BuilderLawyerName))
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-briefcase me-2 text-primary"></i>Builder's Lawyer</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm table-borderless mb-0">
                            <tr>
                                <td class="text-muted">Name</td>
                                <td class="fw-bold">@Model.BuilderLawyerName</td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.BuilderLawyerFirm))
                            {
                                <tr>
                                    <td class="text-muted">Firm</td>
                                    <td>@Model.BuilderLawyerFirm</td>
                                </tr>
                            }
                            @if (Model.BuilderLawyerReviewStatus.HasValue)
                            {
                                <tr>
                                    <td class="text-muted">Review Status</td>
                                    <td>
                                        <span class="badge bg-@GetBuilderLawyerStatusClass(Model.BuilderLawyerReviewStatus.Value)">
                                            @Model.BuilderLawyerReviewStatus.Value
                                        </span>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="BuyerLawyer" asp-action="ApproveBuyerInfo" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.AssignmentId" />
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-check-circle me-2"></i>Approve Buyer Information</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>You are about to approve buyer information for <strong>Unit @Model.UnitNumber</strong>.</p>
                    <div class="mb-3">
                        <label class="form-label">Approval Notes (Optional)</label>
                        <textarea name="approvalNotes" class="form-control" rows="3"
                                  placeholder="Add any notes about this approval..."></textarea>
                    </div>
                    <div class="alert alert-info small mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        This will mark the buyer's information as verified and approved by the buyer's lawyer.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-2"></i>Confirm Approval
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Revision Modal -->
<div class="modal fade" id="revisionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="BuyerLawyer" asp-action="RequestRevision" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.AssignmentId" />
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-arrow-counterclockwise me-2"></i>Request Revision</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Please describe what needs to be revised for <strong>Unit @Model.UnitNumber</strong>:</p>
                    <div class="mb-3">
                        <label class="form-label">Revision Details <span class="text-danger">*</span></label>
                        <textarea name="revisionNotes" class="form-control" rows="4" required
                                  placeholder="Describe what needs to be corrected or updated..."></textarea>
                    </div>
                    <div class="alert alert-warning small mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        The purchaser will be notified about this revision request.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-arrow-counterclockwise me-2"></i>Submit Revision Request
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@functions {
    string GetReviewStatusClass()
    {
        return Model.ReviewStatus switch
        {
            LawyerReviewStatus.Pending => "warning",
            LawyerReviewStatus.UnderReview => "info",
            LawyerReviewStatus.Approved => "success",
            LawyerReviewStatus.NeedsRevision => "danger",
            _ => "secondary"
        };
    }

    string GetBuilderLawyerStatusClass(LawyerReviewStatus status)
    {
        return status switch
        {
            LawyerReviewStatus.Pending => "warning",
            LawyerReviewStatus.UnderReview => "info",
            LawyerReviewStatus.Approved => "success",
            LawyerReviewStatus.NeedsRevision => "danger",
            _ => "secondary"
        };
    }

    string GetNoteTypeDisplay(LawyerNoteType type) => type switch
    {
        LawyerNoteType.General => "Note",
        LawyerNoteType.Question => "Question",
        LawyerNoteType.Concern => "Concern",
        LawyerNoteType.RevisionRequest => "Revision Request",
        LawyerNoteType.Approval => "Approval Note",
        _ => "Note"
    };

    string GetNoteTypeIcon(LawyerNoteType type) => type switch
    {
        LawyerNoteType.Question => "bi-question-circle",
        LawyerNoteType.Concern => "bi-exclamation-triangle",
        LawyerNoteType.RevisionRequest => "bi-arrow-repeat",
        LawyerNoteType.Approval => "bi-check-circle",
        _ => "bi-chat-left-text"
    };

    string GetNoteTypeColor(LawyerNoteType type) => type switch
    {
        LawyerNoteType.Question => "text-info",
        LawyerNoteType.Concern => "text-warning",
        LawyerNoteType.RevisionRequest => "text-danger",
        LawyerNoteType.Approval => "text-success",
        _ => "text-secondary"
    };
}

<script>
    document.getElementById('noteVisibility')?.addEventListener('change', function() {
        var helpText = document.getElementById('visibilityHelp');
        if (helpText) {
            switch(this.value) {
                case '0':
                    helpText.textContent = 'Only you can see this note. Useful for personal reminders.';
                    break;
                case '3':
                    helpText.textContent = 'Purchaser will be notified of this note.';
                    break;
                case '2':
                    helpText.textContent = 'All lawyers assigned to this unit can see this note.';
                    break;
            }
        }
    });
</script>
