@model PreConHub.Models.ViewModels.BuyerLawyerDashboardViewModel
@{
    ViewData["Title"] = "Buyer's Lawyer Dashboard";
    var startItem = Model.TotalFilteredUnits == 0 ? 0 : (Model.CurrentPage - 1) * Model.PageSize + 1;
    var endItem = Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalFilteredUnits);
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="mb-4">
        <h1 class="h3 mb-1">
            <i class="bi bi-briefcase-fill" style="color: #6f42c1;"></i>
            <span class="ms-2">Welcome, @Model.LawyerName</span>
        </h1>
        @if (!string.IsNullOrEmpty(Model.LawyerFirm))
        {
            <p class="text-muted mb-0">@Model.LawyerFirm</p>
        }
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-6 fw-bold" style="color: #6f42c1;">@Model.TotalAssigned</div>
                    <div class="text-muted">Total Assigned</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100 border-start border-warning border-4">
                <div class="card-body text-center">
                    <div class="display-6 fw-bold text-warning">@Model.PendingReview</div>
                    <div class="text-muted">Pending Review</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100 border-start border-info border-4">
                <div class="card-body text-center">
                    <div class="display-6 fw-bold text-info">@Model.UnderReview</div>
                    <div class="text-muted">Under Review</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100 border-start border-success border-4">
                <div class="card-body text-center">
                    <div class="display-6 fw-bold text-success">@Model.Approved</div>
                    <div class="text-muted">Approved</div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.NeedsAttention > 0)
    {
        <div class="alert alert-danger mb-4">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>@Model.NeedsAttention unit(s)</strong> need attention or have been flagged for revision.
        </div>
    }

    <!-- Search & Filter Bar -->
    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body py-2">
            <form id="filterForm" method="get" asp-controller="BuyerLawyer" asp-action="Dashboard">
                <div class="row g-2 align-items-center">
                    <div class="col-md-3">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" id="searchInput" name="search" class="form-control"
                                   placeholder="Search by unit # or purchaser name..." value="@Model.SearchQuery" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select name="projectFilter" class="form-select form-select-sm">
                            <option value="">All Projects</option>
                            @foreach (var proj in Model.Projects)
                            {
                                @if (Model.ProjectFilter == proj.Id)
                                {
                                    <option value="@proj.Id" selected>@proj.Name</option>
                                }
                                else
                                {
                                    <option value="@proj.Id">@proj.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select name="pageSize" class="form-select form-select-sm">
                            @foreach (var size in new[] { 25, 50, 100, 250, 500 })
                            {
                                @if (Model.PageSize == size)
                                {
                                    <option value="@size" selected>@size per page</option>
                                }
                                else
                                {
                                    <option value="@size">@size per page</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-sm" style="background-color: #6f42c1; color: white;">
                                <i class="bi bi-funnel me-1"></i>Apply
                            </button>
                            <a asp-controller="BuyerLawyer" asp-action="Dashboard" class="btn btn-sm btn-outline-secondary">Clear</a>
                        </div>
                    </div>
                    <div class="col-md-2 text-end">
                        <span class="text-muted small">
                            @Model.TotalFilteredUnits of @Model.TotalAssigned units
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Units Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-list-ul me-2"></i>Assigned Units
            </h5>
            <div class="btn-group btn-group-sm" role="group">
                <input type="radio" class="btn-check" name="statusFilter" id="filterAll" autocomplete="off" checked onchange="filterUnits('all')">
                <label class="btn btn-outline-secondary" for="filterAll">All</label>

                <input type="radio" class="btn-check" name="statusFilter" id="filterPending" autocomplete="off" onchange="filterUnits('pending')">
                <label class="btn btn-outline-warning" for="filterPending">Pending</label>

                <input type="radio" class="btn-check" name="statusFilter" id="filterReview" autocomplete="off" onchange="filterUnits('underreview')">
                <label class="btn btn-outline-info" for="filterReview">Under Review</label>

                <input type="radio" class="btn-check" name="statusFilter" id="filterApproved" autocomplete="off" onchange="filterUnits('approved')">
                <label class="btn btn-outline-success" for="filterApproved">Approved</label>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Units.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Unit / Project</th>
                                <th>Purchaser</th>
                                <th>Closing Date</th>
                                <th>Purchase Price</th>
                                <th>Mortgage</th>
                                <th>Cash to Close</th>
                                <th>Review Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var unit in Model.Units)
                            {
                                <tr class="unit-row" data-status="@unit.ReviewStatus.ToString().ToLower()">
                                    <td>
                                        <strong>Unit @unit.UnitNumber</strong><br />
                                        <small class="text-muted">@unit.ProjectName</small>
                                    </td>
                                    <td>
                                        @unit.PurchaserName
                                        @if (!string.IsNullOrEmpty(unit.PurchaserEmail))
                                        {
                                            <br /><small class="text-muted">@unit.PurchaserEmail</small>
                                        }
                                        @if (!string.IsNullOrEmpty(unit.PurchaserPhone))
                                        {
                                            <br /><small class="text-muted"><i class="bi bi-phone me-1"></i>@unit.PurchaserPhone</small>
                                        }
                                    </td>
                                    <td>
                                        @if (unit.ClosingDate.HasValue)
                                        {
                                            @unit.ClosingDate.Value.ToString("MMM dd, yyyy")
                                            @if (unit.DaysUntilClosing <= 30 && unit.DaysUntilClosing > 0)
                                            {
                                                <br /><span class="badge bg-warning text-dark">@unit.DaysUntilClosing days</span>
                                            }
                                            else if (unit.DaysUntilClosing <= 0)
                                            {
                                                <br /><span class="badge bg-danger">Overdue</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">TBD</span>
                                        }
                                    </td>
                                    <td>$@unit.PurchasePrice.ToString("N0")</td>
                                    <td>
                                        @if (unit.HasMortgageInfo)
                                        {
                                            <span class="text-success">
                                                <i class="bi bi-check-circle me-1"></i>$@unit.MortgageAmount.ToString("N0")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">
                                                <i class="bi bi-x-circle me-1"></i>None
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (unit.HasSOA)
                                        {
                                            <strong>$@unit.CashRequiredToClose.ToString("N0")</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not calculated</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@unit.ReviewStatusClass">
                                            @unit.ReviewStatus
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        @{
                                            var buttonText = unit.ReviewStatus switch
                                            {
                                                PreConHub.Models.Entities.LawyerReviewStatus.Pending => "Start Review",
                                                PreConHub.Models.Entities.LawyerReviewStatus.Approved => "View",
                                                _ => "Continue"
                                            };
                                            var buttonIcon = unit.ReviewStatus switch
                                            {
                                                PreConHub.Models.Entities.LawyerReviewStatus.Pending => "bi-play-circle",
                                                PreConHub.Models.Entities.LawyerReviewStatus.Approved => "bi-eye",
                                                _ => "bi-pencil"
                                            };
                                            var buttonClass = unit.ReviewStatus == PreConHub.Models.Entities.LawyerReviewStatus.Pending
                                                ? "btn-primary"
                                                : "btn-outline-primary";
                                        }
                                        <a href="@Url.Action("ReviewUnit", "BuyerLawyer", new { id = unit.AssignmentId })"
                                           class="btn btn-sm @buttonClass">
                                            <i class="bi @buttonIcon me-1"></i>@buttonText
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* ===== Pagination ===== *@
                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3">
                        <small class="text-muted">Showing @startItem&ndash;@endItem of @Model.TotalFilteredUnits units</small>
                        <nav aria-label="Units pagination">
                            <ul class="pagination pagination-sm mb-0">
                                @if (Model.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Dashboard", "BuyerLawyer", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize, projectFilter = Model.ProjectFilter, search = Model.SearchQuery })">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled"><span class="page-link"><i class="bi bi-chevron-left"></i></span></li>
                                }

                                @{
                                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                                    if (startPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Dashboard", "BuyerLawyer", new { page = 1, pageSize = Model.PageSize, projectFilter = Model.ProjectFilter, search = Model.SearchQuery })">1</a>
                                        </li>
                                        if (startPage > 2)
                                        {
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        }
                                    }
                                    for (var pg = startPage; pg <= endPage; pg++)
                                    {
                                        if (pg == Model.CurrentPage)
                                        {
                                            <li class="page-item active"><span class="page-link">@pg</span></li>
                                        }
                                        else
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Url.Action("Dashboard", "BuyerLawyer", new { page = pg, pageSize = Model.PageSize, projectFilter = Model.ProjectFilter, search = Model.SearchQuery })">@pg</a>
                                            </li>
                                        }
                                    }
                                    if (endPage < Model.TotalPages)
                                    {
                                        if (endPage < Model.TotalPages - 1)
                                        {
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        }
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Dashboard", "BuyerLawyer", new { page = Model.TotalPages, pageSize = Model.PageSize, projectFilter = Model.ProjectFilter, search = Model.SearchQuery })">@Model.TotalPages</a>
                                        </li>
                                    }
                                }

                                @if (Model.CurrentPage < Model.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Dashboard", "BuyerLawyer", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize, projectFilter = Model.ProjectFilter, search = Model.SearchQuery })">
                                            <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled"><span class="page-link"><i class="bi bi-chevron-right"></i></span></li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
                else
                {
                    <div class="card-footer bg-white py-3">
                        <small class="text-muted">Showing @startItem&ndash;@endItem of @Model.TotalFilteredUnits units</small>
                    </div>
                }
            }
            else if (!string.IsNullOrWhiteSpace(Model.SearchQuery) || Model.ProjectFilter.HasValue)
            {
                <div class="text-center py-5">
                    <i class="bi bi-search text-muted" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">No Units Match Your Filters</h5>
                    <p class="text-muted">Try adjusting your search or project filter.</p>
                    <a asp-controller="BuyerLawyer" asp-action="Dashboard" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-x-circle me-1"></i>Clear All Filters
                    </a>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">No Units Assigned</h5>
                    <p class="text-muted">You don't have any units assigned for review yet.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Live search with debounce
    (function () {
        var searchInput = document.getElementById('searchInput');
        var filterForm = document.getElementById('filterForm');
        var debounceTimer = null;

        if (searchInput && filterForm) {
            searchInput.addEventListener('input', function () {
                clearTimeout(debounceTimer);
                var val = searchInput.value.trim();
                if (val.length >= 2 || val.length === 0) {
                    debounceTimer = setTimeout(function () {
                        filterForm.submit();
                    }, 400);
                }
            });
        }
    })();

    // Client-side review status filter (within current page)
    function filterUnits(status) {
        var rows = document.querySelectorAll('.unit-row');
        rows.forEach(function(row) {
            if (status === 'all') {
                row.style.display = '';
            } else if (row.dataset.status === status) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }
</script>
}
