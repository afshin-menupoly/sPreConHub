@model PreConHub.Models.ViewModels.LawyerAcceptInvitationViewModel
@{
    ViewData["Title"] = "Welcome to PreConHub";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PreConHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(135deg, #5a2d82 0%, #6f42c1 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .welcome-card {
            max-width: 500px;
            width: 100%;
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }
        .welcome-header {
            background: linear-gradient(135deg, #5a2d82 0%, #7c3aed 100%);
            color: white;
            padding: 40px 30px;
            text-align: center;
            border-radius: 16px 16px 0 0;
        }
        .welcome-icon {
            width: 80px;
            height: 80px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }
        .welcome-body {
            padding: 30px;
            background: white;
            border-radius: 0 0 16px 16px;
        }
        .assignment-badge {
            background: #f3e8ff;
            border: 1px solid #c4b5fd;
            color: #5b21b6;
            padding: 10px 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="welcome-card card border-0">
        <div class="welcome-header">
            <div class="welcome-icon">
                <i class="bi bi-briefcase-fill fs-1"></i>
            </div>
            <h1 class="h3 mb-2">Welcome to PreConHub!</h1>
            <p class="mb-0 opacity-75">Buyer's Legal Review Portal</p>
        </div>

        <div class="welcome-body">
            <div class="text-center mb-4">
                <p class="text-muted mb-3">
                    Hello <strong>@Model.FirstName @Model.LastName</strong>!
                </p>

                @if (!string.IsNullOrEmpty(Model.FirmName))
                {
                    <p class="text-muted small">@Model.FirmName</p>
                }

                <div class="assignment-badge">
                    <i class="bi bi-folder me-2"></i>
                    You have been assigned <strong>@Model.AssignedUnitsCount unit(s)</strong> for review
                    @if (Model.ProjectNames.Any())
                    {
                        <br />
                        <small class="text-muted">
                            Projects: @string.Join(", ", Model.ProjectNames)
                        </small>
                    }
                </div>
            </div>

            <p class="text-center text-muted small mb-4">
                Create your password below to access your review dashboard.
            </p>

            <form asp-controller="BuyerLawyer" asp-action="AcceptInvitation" method="post">
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Code" />
                <input type="hidden" asp-for="FirstName" />
                <input type="hidden" asp-for="LastName" />
                <input type="hidden" asp-for="FirmName" />

                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label class="form-label">Email Address</label>
                    <input type="email" class="form-control bg-light" value="@Model.Email" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Create Password</label>
                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('Password')">
                            <i class="bi bi-eye" id="Password-icon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                        <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('ConfirmPassword')">
                            <i class="bi bi-eye" id="ConfirmPassword-icon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-lg" style="background-color: #6f42c1; color: white;">
                        <i class="bi bi-check-circle me-2"></i>Activate My Account
                    </button>
                </div>
            </form>

            <hr class="my-4" />

            <div class="text-center text-muted small">
                <p class="mb-2">After activating your account, you'll be able to:</p>
                <div class="d-flex justify-content-around">
                    <span><i class="bi bi-person-check me-1" style="color: #6f42c1;"></i>Review buyer info</span>
                    <span><i class="bi bi-calculator me-1" style="color: #6f42c1;"></i>Verify SOA</span>
                    <span><i class="bi bi-upload me-1" style="color: #6f42c1;"></i>Upload documents</span>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function togglePassword(fieldId) {
            var field = document.getElementById(fieldId);
            var icon = document.getElementById(fieldId + '-icon');
            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
    </script>
</body>
</html>
