@model PreConHub.Models.ViewModels.VerifyTwoFactorCodeViewModel
@{
    ViewData["Title"] = "Enable SMS Verification";
}

<div class="container py-4" style="max-width: 600px;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-3">
            <li class="breadcrumb-item"><a asp-action="Profile">My Profile</a></li>
            <li class="breadcrumb-item active">SMS Verification</li>
        </ol>
    </nav>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0"><i class="bi bi-chat-dots me-2"></i>Enable SMS Verification</h5>
        </div>
        <div class="card-body">
            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>@TempData["Info"]
                </div>
            }

            <div class="alert alert-warning">
                <i class="bi bi-cone-striped me-2"></i>
                <strong>SMS service coming soon.</strong> This feature is being set up. Once the SMS provider is configured, you will be able to receive verification codes via text message.
            </div>

            <p class="text-muted mb-3">Enter the verification code sent to your cellphone.</p>

            <form asp-action="EnableSmsTwoFactor" method="post">
                <input type="hidden" asp-for="Provider" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-4">
                    <label asp-for="Code" class="form-label">Verification Code <span class="text-danger">*</span></label>
                    <input asp-for="Code" class="form-control" autocomplete="off" placeholder="Enter code" style="max-width: 200px;" />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i>Verify & Enable
                    </button>
                    <a asp-action="Profile" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
