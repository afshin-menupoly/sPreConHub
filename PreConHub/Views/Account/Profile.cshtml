@model PreConHub.Models.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-4" style="max-width: 800px;">
    <div class="mb-4">
        <h1 class="h3 mb-1"><i class="bi bi-person-circle text-primary me-2"></i>My Profile</h1>
        <p class="text-muted">Manage your account information and security settings</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ===== ACCOUNT DETAILS ===== -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Account Details</h5>
                <span class="badge bg-primary">@Model.RoleDisplay</span>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Profile" method="post">
                <input type="hidden" asp-for="UserId" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Please fix the following errors:</strong>
                        <div asp-validation-summary="All" class="mb-0 mt-1"></div>
                    </div>
                }

                <div class="row g-3">
                    <!-- First Name -->
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>

                    <!-- Last Name -->
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email</label>
                        @if (Model.IsEmailReadOnly)
                        {
                            <input asp-for="Email" class="form-control bg-light" readonly />
                            <small class="text-muted"><i class="bi bi-lock me-1"></i>Only Admin can change this field</small>
                        }
                        else
                        {
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        }
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label">Phone Number</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>

                    <!-- Cellphone -->
                    <div class="col-md-6">
                        <label asp-for="CellPhone" class="form-label">Cellphone</label>
                        <input asp-for="CellPhone" class="form-control" placeholder="+1 (555) 123-4567" />
                        <small class="text-muted"><i class="bi bi-info-circle me-1"></i>Used for notifications. By entering, you consent to receive them.</small>
                        <span asp-validation-for="CellPhone" class="text-danger small"></span>
                    </div>

                    <!-- Company Name (Builders, MA) -->
                    @if (Model.UserType == PreConHub.Models.Entities.UserType.Builder || Model.UserType == PreConHub.Models.Entities.UserType.MarketingAgency)
                    {
                        <div class="col-md-6">
                            <label asp-for="CompanyName" class="form-label">Company Name</label>
                            @if (Model.IsCompanyNameReadOnly)
                            {
                                <input asp-for="CompanyName" class="form-control bg-light" readonly />
                                <small class="text-muted"><i class="bi bi-lock me-1"></i>Only Admin can change this field</small>
                            }
                            else
                            {
                                <input asp-for="CompanyName" class="form-control" />
                                <span asp-validation-for="CompanyName" class="text-danger small"></span>
                            }
                        </div>
                    }

                    <!-- Law Firm (Lawyers only) -->
                    @if (Model.UserType == PreConHub.Models.Entities.UserType.Lawyer)
                    {
                        <div class="col-md-6">
                            <label asp-for="LawFirm" class="form-label">Law Firm</label>
                            <input asp-for="LawFirm" class="form-control" />
                            <span asp-validation-for="LawFirm" class="text-danger small"></span>
                        </div>
                    }
                </div>

                <!-- Account Info (read-only) -->
                <hr class="my-4" />
                <h6 class="text-muted mb-3">ACCOUNT INFORMATION</h6>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label text-muted small">Role</label>
                        <div class="form-control bg-light">@Model.RoleDisplay</div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted small">Member Since</label>
                        <div class="form-control bg-light">@Model.CreatedAt.ToString("MMM dd, yyyy")</div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted small">Last Login</label>
                        <div class="form-control bg-light">
                            @if (Model.LastLoginAt.HasValue)
                            {
                                @Model.LastLoginAt.Value.ToString("MMM dd, yyyy h:mm tt")
                            }
                            else
                            {
                                @:Never
                            }
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i>Save Changes
                    </button>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <!-- ===== SECURITY ===== -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0"><i class="bi bi-shield-lock me-2"></i>Security</h5>
        </div>
        <div class="card-body">

            <!-- Change Password -->
            <div class="d-flex justify-content-between align-items-center py-3 border-bottom">
                <div>
                    <h6 class="mb-1"><i class="bi bi-key me-2"></i>Password</h6>
                    <p class="text-muted small mb-0">Change your account password</p>
                </div>
                <a asp-action="ChangePassword" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-pencil me-1"></i>Change Password
                </a>
            </div>

            <!-- Two-Step Verification -->
            <div class="py-3">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h6 class="mb-1"><i class="bi bi-shield-check me-2"></i>Two-Step Verification</h6>
                        <p class="text-muted small mb-0">Add an extra layer of security to your account</p>
                    </div>
                    @if (Model.TwoFactorEnabled)
                    {
                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Enabled</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Disabled</span>
                    }
                </div>

                <div class="row g-3">
                    <!-- Authenticator App -->
                    <div class="col-md-4">
                        <div class="border rounded p-3 h-100">
                            <div class="text-center mb-2">
                                <i class="bi bi-phone fs-2 text-primary"></i>
                            </div>
                            <h6 class="text-center mb-1">Authenticator App</h6>
                            <p class="text-muted small text-center mb-3">Use Google Authenticator, Microsoft Authenticator, or similar</p>
                            <div class="d-grid">
                                @if (Model.HasAuthenticator && Model.TwoFactorEnabled)
                                {
                                    <span class="btn btn-sm btn-success disabled"><i class="bi bi-check me-1"></i>Configured</span>
                                }
                                else
                                {
                                    <a asp-action="SetupAuthenticatorApp" class="btn btn-sm btn-outline-primary">Setup</a>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Email Verification -->
                    <div class="col-md-4">
                        <div class="border rounded p-3 h-100">
                            <div class="text-center mb-2">
                                <i class="bi bi-envelope fs-2 text-info"></i>
                            </div>
                            <h6 class="text-center mb-1">Email Code</h6>
                            <p class="text-muted small text-center mb-3">Receive a verification code via email</p>
                            <div class="d-grid">
                                @if (Model.TwoFactorEnabled)
                                {
                                    <span class="btn btn-sm btn-success disabled"><i class="bi bi-check me-1"></i>2FA Active</span>
                                }
                                else
                                {
                                    <a asp-action="EnableEmailTwoFactor" class="btn btn-sm btn-outline-info">Enable</a>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- SMS Verification -->
                    <div class="col-md-4">
                        <div class="border rounded p-3 h-100">
                            <div class="text-center mb-2">
                                <i class="bi bi-chat-dots fs-2 text-warning"></i>
                            </div>
                            <h6 class="text-center mb-1">SMS Code</h6>
                            <p class="text-muted small text-center mb-2">Receive a verification code via SMS</p>
                            @if (string.IsNullOrWhiteSpace(Model.CellPhone))
                            {
                                <p class="text-danger small text-center mb-2"><i class="bi bi-exclamation-circle me-1"></i>Cellphone required</p>
                            }
                            <div class="d-grid">
                                @if (Model.TwoFactorEnabled)
                                {
                                    <span class="btn btn-sm btn-success disabled"><i class="bi bi-check me-1"></i>2FA Active</span>
                                }
                                else if (string.IsNullOrWhiteSpace(Model.CellPhone))
                                {
                                    <span class="btn btn-sm btn-outline-secondary disabled">Add cellphone first</span>
                                }
                                else
                                {
                                    <a asp-action="EnableSmsTwoFactor" class="btn btn-sm btn-outline-warning">Enable</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.TwoFactorEnabled)
                {
                    <div class="mt-3">
                        <form asp-action="DisableTwoFactor" method="post" onsubmit="return confirm('Are you sure you want to disable two-step verification? This will make your account less secure.');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-shield-x me-1"></i>Disable Two-Step Verification
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
