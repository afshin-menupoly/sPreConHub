@model PreConHub.Models.ViewModels.SetupAuthenticatorViewModel
@{
    ViewData["Title"] = "Setup Authenticator App";
}

<div class="container py-4" style="max-width: 600px;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-3">
            <li class="breadcrumb-item"><a asp-action="Profile">My Profile</a></li>
            <li class="breadcrumb-item active">Setup Authenticator</li>
        </ol>
    </nav>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0"><i class="bi bi-phone me-2"></i>Setup Authenticator App</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                Use an authenticator app such as <strong>Google Authenticator</strong>, <strong>Microsoft Authenticator</strong>, or <strong>Authy</strong>.
            </div>

            <h6 class="mb-3">Step 1: Scan this QR code</h6>
            <div class="text-center mb-3">
                <div id="qrCode" class="d-inline-block border rounded p-3 bg-white"></div>
            </div>

            <h6 class="mb-2">Or enter this key manually:</h6>
            <div class="bg-light rounded p-3 mb-4 text-center">
                <code class="fs-5 user-select-all">@Model.SharedKey</code>
            </div>

            <h6 class="mb-3">Step 2: Enter the code from your app</h6>
            <form asp-action="SetupAuthenticatorApp" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-4">
                    <label asp-for="Code" class="form-label">Verification Code <span class="text-danger">*</span></label>
                    <input asp-for="Code" class="form-control" autocomplete="off" placeholder="6-digit code" style="max-width: 200px;" />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i>Verify & Enable
                    </button>
                    <a asp-action="Profile" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>
<script>
    new QRCode(document.getElementById("qrCode"), {
        text: decodeURIComponent("@Uri.EscapeDataString(Model.AuthenticatorUri)"),
        width: 200,
        height: 200
    });
</script>
}
