@model PreConHub.Models.ViewModels.MarketingAgencyDashboardViewModel
@{
    ViewData["Title"] = "Marketing Agency Dashboard";
}

<div class="container py-4">
    <div class="mb-4">
        <h1 class="h3 mb-1">
            <i class="bi bi-megaphone text-primary me-2"></i>Marketing Agency Dashboard
        </h1>
        <p class="text-muted">Projects you have access to review and suggest discounts for.</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Projects.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            You do not currently have access to any projects. Please contact the builder to request access.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var project in Model.Projects)
            {
                <div class="col-md-6 col-xl-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@project.ProjectName</h5>
                                <span class="badge @project.StatusBadgeClass">@project.Status</span>
                            </div>
                            <p class="text-muted small mb-3">
                                <i class="bi bi-geo-alt me-1"></i>@project.Address, @project.City
                            </p>

                            <div class="row text-center g-2 mb-3">
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <div class="fw-bold fs-4">@project.TotalUnits</div>
                                        <div class="text-muted small">Total Units</div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="border rounded p-2 @(project.UnitsNeedingDiscount > 0 ? "border-primary" : "")">
                                        <div class="fw-bold fs-4 @(project.UnitsNeedingDiscount > 0 ? "text-primary" : "text-muted")">
                                            @project.UnitsNeedingDiscount
                                        </div>
                                        <div class="text-muted small">Need Discount</div>
                                    </div>
                                </div>
                            </div>

                            @if (project.ClosingDate.HasValue)
                            {
                                <p class="text-muted small mb-3">
                                    <i class="bi bi-calendar me-1"></i>
                                    Closing: @project.ClosingDate.Value.ToString("MMMM dd, yyyy")
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-white border-0">
                            <a href="@Url.Action("ProjectUnits", "MarketingAgency", new { id = project.ProjectId })"
                               class="btn btn-primary w-100">
                                <i class="bi bi-eye me-1"></i>View Units &amp; Suggest Discounts
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4">
            <a href="@Url.Action("AuditTrail", "MarketingAgency")" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-clock-history me-1"></i>My Activity Log
            </a>
        </div>
    }
</div>
