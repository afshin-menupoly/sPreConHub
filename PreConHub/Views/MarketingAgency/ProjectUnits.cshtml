@model PreConHub.Models.ViewModels.MarketingAgencyProjectUnitsViewModel
@{
    ViewData["Title"] = $"Units — {Model.ProjectName}";
    var startItem = Model.TotalFilteredUnits == 0 ? 0 : (Model.CurrentPage - 1) * Model.PageSize + 1;
    var endItem = Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalFilteredUnits);
}

<div class="container py-4">
    <!-- Header -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Dashboard", "MarketingAgency")">My Projects</a>
                </li>
                <li class="breadcrumb-item active">@Model.ProjectName</li>
            </ol>
        </nav>
        <h1 class="h3 mb-1">
            <i class="bi bi-building text-primary me-2"></i>@Model.ProjectName
        </h1>
        <p class="text-muted mb-0">
            <i class="bi bi-geo-alt me-1"></i>@Model.Address
        </p>
        <div class="alert alert-info mt-3 py-2 mb-0">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Marketing Agency View:</strong> You can see unit design and pricing information.
            You may suggest discounts for units that need one. All suggestions are logged and reviewed by the builder.
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search & Filter Bar -->
    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body py-2">
            <form id="filterForm" method="get" asp-action="ProjectUnits" asp-route-id="@Model.ProjectId">
                <div class="row g-2 align-items-center">
                    <div class="col-md-4">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" id="searchInput" name="search" class="form-control"
                                   placeholder="Search by unit # or purchaser name..." value="@Model.SearchQuery" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <select name="pageSize" class="form-select form-select-sm">
                            @foreach (var size in new[] { 25, 50, 100, 250, 500 })
                            {
                                @if (Model.PageSize == size)
                                {
                                    <option value="@size" selected>@size per page</option>
                                }
                                else
                                {
                                    <option value="@size">@size per page</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-sm btn-primary">
                                <i class="bi bi-funnel me-1"></i>Apply
                            </button>
                            <a href="@Url.Action("ProjectUnits", new { id = Model.ProjectId })" class="btn btn-sm btn-outline-secondary">Clear</a>
                        </div>
                    </div>
                    <div class="col-md-3 text-end">
                        <span class="text-muted small">
                            @Model.TotalFilteredUnits of @Model.TotalUnits units
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Units.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Unit #</th>
                                <th>Type</th>
                                <th>Bed / Bath</th>
                                <th>Sq Ft</th>
                                <th class="text-end">Purchase Price</th>
                                <th>Closing Date</th>
                                <th>AI Status</th>
                                <th>AI Suggested Discount</th>
                                <th>My Suggestion</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var unit in Model.Units)
                            {
                                <tr>
                                    <td class="fw-bold">@unit.UnitNumber</td>
                                    <td>@unit.UnitType</td>
                                    <td>@unit.Bedrooms bd / @unit.Bathrooms ba</td>
                                    <td>@unit.SquareFootage.ToString("N0") ft²</td>
                                    <td class="text-end">@unit.PurchasePrice.ToString("C0")</td>
                                    <td class="text-muted small">
                                        @(unit.ClosingDate?.ToString("MMM dd, yyyy") ?? "—")
                                    </td>
                                    <td>
                                        @if (unit.Recommendation.HasValue)
                                        {
                                            <span class="badge @unit.RecommendationBadgeClass">
                                                @unit.RecommendationText
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Pending</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (unit.AISuggestedDiscount.HasValue && unit.AISuggestedDiscount > 0)
                                        {
                                            <span class="text-primary fw-semibold">
                                                @unit.AISuggestedDiscount.Value.ToString("C0")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>
                                        @if (unit.HasMASuggestion)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check me-1"></i>Submitted
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">None yet</span>
                                        }
                                    </td>
                                    <td>
                                        @* Only show suggest button for units that need a discount or combination *@
                                        @if (unit.Recommendation == PreConHub.Models.Entities.ClosingRecommendation.CloseWithDiscount ||
                                             unit.Recommendation == PreConHub.Models.Entities.ClosingRecommendation.CombinationSuggestion ||
                                             !unit.Recommendation.HasValue)
                                        {
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-primary"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#suggestModal-@unit.UnitId">
                                                <i class="bi bi-pencil me-1"></i>
                                                @(unit.HasMASuggestion ? "Revise" : "Suggest")
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @* ===== Pagination ===== *@
            @if (Model.TotalPages > 1)
            {
                <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3">
                    <small class="text-muted">Showing @startItem–@endItem of @Model.TotalFilteredUnits units</small>
                    <nav aria-label="Units pagination">
                        <ul class="pagination pagination-sm mb-0">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("ProjectUnits", new { id = Model.ProjectId, page = Model.CurrentPage - 1, pageSize = Model.PageSize, search = Model.SearchQuery })">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled"><span class="page-link"><i class="bi bi-chevron-left"></i></span></li>
                            }

                            @{
                                var startPage = Math.Max(1, Model.CurrentPage - 2);
                                var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                                if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("ProjectUnits", new { id = Model.ProjectId, page = 1, pageSize = Model.PageSize, search = Model.SearchQuery })">1</a>
                                    </li>
                                    if (startPage > 2)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                }
                                for (var pg = startPage; pg <= endPage; pg++)
                                {
                                    if (pg == Model.CurrentPage)
                                    {
                                        <li class="page-item active"><span class="page-link">@pg</span></li>
                                    }
                                    else
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("ProjectUnits", new { id = Model.ProjectId, page = pg, pageSize = Model.PageSize, search = Model.SearchQuery })">@pg</a>
                                        </li>
                                    }
                                }
                                if (endPage < Model.TotalPages)
                                {
                                    if (endPage < Model.TotalPages - 1)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("ProjectUnits", new { id = Model.ProjectId, page = Model.TotalPages, pageSize = Model.PageSize, search = Model.SearchQuery })">@Model.TotalPages</a>
                                    </li>
                                }
                            }

                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("ProjectUnits", new { id = Model.ProjectId, page = Model.CurrentPage + 1, pageSize = Model.PageSize, search = Model.SearchQuery })">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled"><span class="page-link"><i class="bi bi-chevron-right"></i></span></li>
                            }
                        </ul>
                    </nav>
                </div>
            }
            else
            {
                <div class="card-footer bg-white py-3">
                    <small class="text-muted">Showing @startItem–@endItem of @Model.TotalFilteredUnits units</small>
                </div>
            }
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-search display-4 d-block mb-3 text-muted"></i>
                <h5>No Units Match Your Search</h5>
                <p class="text-muted">Try a different unit number or purchaser name.</p>
                <a href="@Url.Action("ProjectUnits", new { id = Model.ProjectId })" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Clear Search
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No units found for this project.
        </div>
    }

    <div class="mt-3 d-flex gap-2">
        <a href="@Url.Action("SuggestionHistory", "MarketingAgency", new { id = Model.ProjectId })" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-clock-history me-1"></i>Suggestion History
        </a>
        <a href="@Url.Action("AuditTrail", "MarketingAgency")" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-journal-text me-1"></i>My Activity Log
        </a>
    </div>
</div>

<!-- Suggest Discount Modals (one per eligible unit on current page) -->
@foreach (var unit in Model.Units.Where(u =>
    u.Recommendation == PreConHub.Models.Entities.ClosingRecommendation.CloseWithDiscount ||
    u.Recommendation == PreConHub.Models.Entities.ClosingRecommendation.CombinationSuggestion ||
    !u.Recommendation.HasValue))
{
    <div class="modal fade" id="suggestModal-@unit.UnitId" tabindex="-1" aria-labelledby="suggestModalLabel-@unit.UnitId" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="suggestModalLabel-@unit.UnitId">
                        <i class="bi bi-tag me-2"></i>Suggest — Unit @unit.UnitNumber
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="suggestForm-@unit.UnitId" asp-action="SuggestDiscount" asp-controller="MarketingAgency" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="UnitId" value="@unit.UnitId" />
                    <input type="hidden" name="ProjectId" value="@Model.ProjectId" />
                    <input type="hidden" name="UnitNumber" value="@unit.UnitNumber" />
                    <input type="hidden" name="ProjectName" value="@Model.ProjectName" />
                    <input type="hidden" name="page" value="@Model.CurrentPage" />
                    <input type="hidden" name="pageSize" value="@Model.PageSize" />
                    <input type="hidden" name="search" value="@Model.SearchQuery" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Suggestion Type</label>
                            <select class="form-select form-select-sm" onchange="document.getElementById('suggestForm-@unit.UnitId').action = this.value === 'credit' ? '@Url.Action("SuggestCreditAdjustment", "MarketingAgency")' : '@Url.Action("SuggestDiscount", "MarketingAgency")'">
                                <option value="discount">Discount Suggestion</option>
                                <option value="credit">Credit Adjustment</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <p class="text-muted small mb-2">
                                Unit @unit.UnitNumber — @unit.UnitType, @unit.Bedrooms bd / @unit.Bathrooms ba,
                                @unit.SquareFootage.ToString("N0") ft², listed at @unit.PurchasePrice.ToString("C0")
                            </p>
                            @if (unit.AISuggestedDiscount.HasValue && unit.AISuggestedDiscount > 0)
                            {
                                <div class="alert alert-light py-2 mb-3">
                                    <small>
                                        <i class="bi bi-robot me-1 text-primary"></i>
                                        AI suggested discount: <strong>@unit.AISuggestedDiscount.Value.ToString("C0")</strong>
                                    </small>
                                </div>
                            }
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                Suggested Discount / Credit Amount <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" name="SuggestedAmount"
                                       min="0" max="9999999" step="500" required
                                       placeholder="e.g. 15000" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Notes / Justification</label>
                            <textarea class="form-control" name="Notes" rows="3" maxlength="500"
                                      placeholder="Briefly explain your reasoning (optional)..."></textarea>
                        </div>
                        <p class="text-muted small mb-0">
                            <i class="bi bi-shield-lock me-1"></i>
                            Your suggestion will be logged and reviewed by the builder. It does not automatically apply.
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send me-1"></i>Submit Suggestion
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
<script>
    (function () {
        var searchInput = document.getElementById('searchInput');
        var filterForm = document.getElementById('filterForm');
        var debounceTimer = null;

        if (searchInput && filterForm) {
            searchInput.addEventListener('input', function () {
                clearTimeout(debounceTimer);
                var val = searchInput.value.trim();
                if (val.length >= 2 || val.length === 0) {
                    debounceTimer = setTimeout(function () {
                        filterForm.submit();
                    }, 400);
                }
            });
        }
    })();
</script>
}
