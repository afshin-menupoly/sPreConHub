@model PreConHub.Models.ViewModels.SubmitExtensionRequestViewModel
@{
    ViewData["Title"] = "Request Closing Extension";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Purchaser")">My Dashboard</a></li>
                        <li class="breadcrumb-item active">Request Closing Extension</li>
                    </ol>
                </nav>
                <h1 class="h3 mb-1">
                    <i class="bi bi-calendar-plus text-primary me-2"></i>Request Closing Extension
                </h1>
                <p class="text-muted">Unit @Model.UnitNumber at @Model.ProjectName</p>
            </div>

            <!-- Existing pending request warning -->
            @if (Model.ExistingRequestId.HasValue)
            {
                <div class="alert alert-warning mb-4">
                    <h6 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Pending Request Exists</h6>
                    <p class="mb-0 small">
                        You already have a pending extension request. Submitting this form will
                        <strong>replace</strong> your existing request with the new dates and reason below.
                    </p>
                </div>
            }

            <!-- Current closing date info -->
            @if (Model.CurrentClosingDate.HasValue)
            {
                <div class="alert alert-info mb-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-calendar-event me-3 fs-4"></i>
                        <div>
                            <div class="fw-bold">Current Closing Date</div>
                            <div class="fs-5">@Model.CurrentClosingDate.Value.ToString("MMMM dd, yyyy")</div>
                        </div>
                    </div>
                </div>
            }

            <!-- Form -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="SubmitExtensionRequest" method="post">
                        <input type="hidden" asp-for="UnitId" />
                        <input type="hidden" asp-for="UnitNumber" />
                        <input type="hidden" asp-for="ProjectName" />
                        <input type="hidden" asp-for="ExistingRequestId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Requested New Closing Date -->
                        <div class="mb-4">
                            <label asp-for="RequestedNewClosingDate" class="form-label fw-bold">
                                Requested New Closing Date <span class="text-danger">*</span>
                            </label>
                            <input asp-for="RequestedNewClosingDate" type="date" class="form-control form-control-lg"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="RequestedNewClosingDate" class="text-danger"></span>
                            <div class="form-text">Select a date after your current closing date.</div>
                        </div>

                        <!-- Reason -->
                        <div class="mb-4">
                            <label asp-for="Reason" class="form-label fw-bold">
                                Reason for Extension / Reschedule <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Reason" class="form-control" rows="5"
                                      placeholder="Please describe why you need a closing extension (e.g., mortgage funding delay, sale of existing property, employment change, etc.)"></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                            <div class="form-text">Be specific — the builder will review your reason before approving or rejecting.</div>
                        </div>

                        <hr class="my-4" />

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Dashboard", "Purchaser")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send me-2"></i>
                                @(Model.ExistingRequestId.HasValue ? "Update Request" : "Submit Request")
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tips -->
            <div class="card border-0 shadow-sm mt-4 bg-light">
                <div class="card-body">
                    <h6><i class="bi bi-lightbulb me-2 text-warning"></i>Tips</h6>
                    <ul class="small mb-0">
                        <li>Your builder must approve the extension — it is not guaranteed.</li>
                        <li>Submit as early as possible to allow time for review.</li>
                        <li>If your extension is related to a mortgage delay, contact your lender first and include their timeline.</li>
                        <li>You can update your request at any time while it is still pending.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
