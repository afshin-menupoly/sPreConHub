@{
    ViewData["Title"] = "No Units Found";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="mb-4">
                <i class="bi bi-house-x text-muted" style="font-size: 5rem;"></i>
            </div>
            
            <h2 class="mb-3">No Units Found</h2>
            
            <p class="text-muted mb-4">
                Your account doesn't have any units assigned yet. This could mean:
            </p>
            
            <ul class="text-start text-muted mb-4">
                <li>Your builder hasn't assigned you to a unit yet</li>
                <li>You used a different email address when purchasing</li>
                <li>There was an error during account setup</li>
            </ul>

            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                <strong>What to do:</strong><br/>
                Please contact your builder representative to ensure you're added to the correct unit.
            </div>

            <a href="/" class="btn btn-outline-primary mt-3">
                <i class="bi bi-house me-2"></i>Go to Home
            </a>
        </div>
    </div>
</div>
