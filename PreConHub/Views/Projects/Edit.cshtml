@model PreConHub.Models.ViewModels.CreateProjectViewModel
@{
    ViewData["Title"] = "Edit Project";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Projects")">Projects</a></li>
                        <li class="breadcrumb-item active">Edit Project</li>
                    </ol>
                </nav>
                <h1 class="h3 mb-1">Edit Project</h1>
                <p class="text-muted">Update your project details</p>
            </div>

            <!-- Form Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Project Information -->
                        <h5 class="mb-3 pb-2 border-bottom">
                            <i class="bi bi-building me-2 text-primary"></i>Project Information
                        </h5>
                        
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label">Project Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ProjectType" class="form-label">Project Type <span class="text-danger">*</span></label>
                                <select asp-for="ProjectType" class="form-select" asp-items="Html.GetEnumSelectList<PreConHub.Models.Entities.ProjectType>()">
                                </select>
                                <span asp-validation-for="ProjectType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Street Address <span class="text-danger">*</span></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="City" class="form-label">City <span class="text-danger">*</span></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Province</label>
                                <input type="text" class="form-control" value="Ontario" readonly />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="PostalCode" class="form-label">Postal Code</label>
                                <input asp-for="PostalCode" class="form-control" />
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="TotalUnits" class="form-label">Total Units <span class="text-danger">*</span></label>
                            <input asp-for="TotalUnits" type="number" class="form-control" min="1" style="max-width: 200px;" />
                            <span asp-validation-for="TotalUnits" class="text-danger"></span>
                        </div>

                        <!-- Important Dates -->
                        <h5 class="mb-3 pb-2 border-bottom">
                            <i class="bi bi-calendar-event me-2 text-primary"></i>Important Dates
                        </h5>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="OccupancyDate" class="form-label">Expected Occupancy Date</label>
                                <input asp-for="OccupancyDate" type="date" class="form-control" />
                                <span asp-validation-for="OccupancyDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ClosingDate" class="form-label">Expected Closing Date</label>
                                <input asp-for="ClosingDate" type="date" class="form-control" />
                                <span asp-validation-for="ClosingDate" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Projects")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
