@model PreConHub.Models.ViewModels.ProjectListViewModel
@{
    ViewData["Title"] = "My Projects";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">My Projects</h1>
            <p class="text-muted mb-0">Manage your pre-construction projects and track closing status</p>
        </div>
        <a href="@Url.Action("Create", "Projects")" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>New Project
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-building text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Projects</h6>
                            <h3 class="mb-0">@Model.TotalProjects</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-check-circle text-success fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Active Projects</h6>
                            <h3 class="mb-0">@Model.ActiveProjects</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-clock text-warning fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Closing Soon</h6>
                            <h3 class="mb-0">@Model.Projects.Count(p => p.ClosingDate.HasValue && p.ClosingDate.Value <= DateTime.Now.AddDays(90))</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-danger bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-exclamation-triangle text-danger fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Units at Risk</h6>
                            <h3 class="mb-0">@Model.Projects.Sum(p => p.UnitsAtRisk)</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Projects List -->
    @if (Model.Projects.Any())
    {
        <div class="row">
            @foreach (var project in Model.Projects)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white border-0 pb-0">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="card-title mb-1">@project.Name</h5>
                                    <p class="text-muted small mb-0">
                                        <i class="bi bi-geo-alt me-1"></i>@project.Address, @project.City
                                    </p>
                                </div>
                                <span class="badge @project.StatusBadgeClass">@project.Status</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row text-center mb-3">
                                <div class="col-4">
                                    <div class="border-end">
                                        <h4 class="mb-0">@project.TotalUnits</h4>
                                        <small class="text-muted">Total Units</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="border-end">
                                        <h4 class="mb-0 text-success">@project.UnitsReadyToClose</h4>
                                        <small class="text-muted">Ready</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <h4 class="mb-0 text-danger">@project.UnitsAtRisk</h4>
                                    <small class="text-muted">At Risk</small>
                                </div>
                            </div>

                            <!-- Closing Probability Bar -->
                            <div class="mb-3">
                                <div class="d-flex justify-content-between small mb-1">
                                    <span>Closing Probability</span>
                                    <span class="fw-bold">@project.ClosingProbability%</span>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    @{
                                        var barColor = project.ClosingProbability >= 70 ? "bg-success" :
                                                       project.ClosingProbability >= 40 ? "bg-warning" : "bg-danger";
                                    }
                                    <div class="progress-bar @barColor" role="progressbar" 
                                         style="width: @project.ClosingProbability%"></div>
                                </div>
                            </div>

                            @if (project.ClosingDate.HasValue)
                            {
                                <p class="small text-muted mb-0">
                                    <i class="bi bi-calendar me-1"></i>
                                    Closing: @project.ClosingDate.Value.ToString("MMM dd, yyyy")
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-white border-0 pt-0">
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Dashboard", "Projects", new { id = project.Id })" 
                                   class="btn btn-primary btn-sm flex-grow-1">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                                <a href="@Url.Action("Edit", "Projects", new { id = project.Id })" 
                                   class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-building text-muted" style="font-size: 4rem;"></i>
                </div>
                <h4>No Projects Yet</h4>
                <p class="text-muted mb-4">
                    Create your first project to start tracking pre-construction closings.
                </p>
                <a href="@Url.Action("Create", "Projects")" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Create Your First Project
                </a>
            </div>
        </div>
    }
</div>

@section Styles {
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
    }
</style>
}
