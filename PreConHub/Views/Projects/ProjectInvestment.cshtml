@model PreConHub.Models.ViewModels.ProjectInvestmentViewModel
@{
    ViewData["Title"] = "Project Investment";
}

<div class="container py-4" style="max-width: 800px;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-3">
            <li class="breadcrumb-item"><a asp-action="Index">Projects</a></li>
            <li class="breadcrumb-item"><a asp-action="Dashboard" asp-route-id="@Model.ProjectId">@Model.ProjectName</a></li>
            <li class="breadcrumb-item active">Investment</li>
        </ol>
    </nav>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-safe me-2"></i>Project Investment â€” @Model.ProjectName</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info small mb-4">
                <i class="bi bi-shield-lock me-1"></i>
                <strong>Private Data.</strong> Only you (the builder) and platform admins can see this. These figures drive the AI discount and VTB allocation engine.
            </div>

            <form asp-action="ProjectInvestment" asp-route-id="@Model.ProjectId" method="post">
                @Html.AntiForgeryToken()

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="TotalRevenue" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="TotalRevenue" class="form-control" type="number" step="0.01" min="0" id="totalRevenue" oninput="recalcInvestment()" />
                        </div>
                        <div class="form-text">Total expected revenue from all unit sales.</div>
                        <span asp-validation-for="TotalRevenue" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TotalInvestment" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="TotalInvestment" class="form-control" type="number" step="0.01" min="0" id="totalInvestment" oninput="recalcInvestment()" />
                        </div>
                        <div class="form-text">Land, construction, development costs.</div>
                        <span asp-validation-for="TotalInvestment" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="MarketingCost" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="MarketingCost" class="form-control" type="number" step="0.01" min="0" id="marketingCost" oninput="recalcInvestment()" />
                        </div>
                        <div class="form-text">Sales, marketing, and agency costs.</div>
                        <span asp-validation-for="MarketingCost" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ProfitAvailable" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="ProfitAvailable" class="form-control" type="number" step="0.01" readonly id="profitAvailable" />
                        </div>
                        <div class="form-text">Auto-calculated: Revenue - Investment - Marketing.</div>
                        <span asp-validation-for="ProfitAvailable" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="MaxBuilderCapital" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="MaxBuilderCapital" class="form-control" type="number" step="0.01" min="0" id="maxBuilderCapital" oninput="recalcInvestment()" />
                        </div>
                        <div class="form-text">Maximum capital available for VTB mortgages across this project.</div>
                        <span asp-validation-for="MaxBuilderCapital" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Notes" class="form-label fw-bold"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Optional notes..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Calculated Summary -->
                <div class="card bg-light border-0 mb-4">
                    <div class="card-body">
                        <h6 class="mb-3"><i class="bi bi-calculator me-1"></i>AI Allocation Summary</h6>
                        <div class="row text-center">
                            <div class="col-md-3">
                                <div class="text-muted small">Total Units</div>
                                <div class="h5">@Model.TotalUnits</div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-muted small">Unsold Units</div>
                                <div class="h5">@Model.UnsoldUnits</div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-muted small">Profit / Unit</div>
                                <div class="h5 text-success" id="profitPerUnit">@Model.CalculatedProfitPerUnit.ToString("C0")</div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-muted small">Max VTB / Unit</div>
                                <div class="h5 text-primary" id="vtbPerUnit">@Model.CalculatedVTBPerUnit.ToString("C0")</div>
                            </div>
                        </div>
                        <p class="text-muted small mb-0 mt-2">
                            <i class="bi bi-info-circle me-1"></i>
                            Profit/Unit = ProfitAvailable / UnsoldUnits. VTB/Unit = MaxBuilderCapital / UnsoldUnits.
                            These values drive the AI shortfall analysis engine.
                        </p>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Dashboard" asp-route-id="@Model.ProjectId" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i>Save Investment Data
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    var unsoldUnits = @Model.UnsoldUnits;

    function recalcInvestment() {
        var revenue = parseFloat(document.getElementById('totalRevenue').value) || 0;
        var investment = parseFloat(document.getElementById('totalInvestment').value) || 0;
        var marketing = parseFloat(document.getElementById('marketingCost').value) || 0;
        var vtb = parseFloat(document.getElementById('maxBuilderCapital').value) || 0;

        var profit = revenue - investment - marketing;
        document.getElementById('profitAvailable').value = profit.toFixed(2);

        var profitPerUnit = unsoldUnits > 0 ? Math.round(profit / unsoldUnits) : 0;
        var vtbPerUnit = unsoldUnits > 0 ? Math.round(vtb / unsoldUnits) : 0;

        document.getElementById('profitPerUnit').textContent = '$' + profitPerUnit.toLocaleString('en-US');
        document.getElementById('vtbPerUnit').textContent = '$' + vtbPerUnit.toLocaleString('en-US');
    }
</script>
}
