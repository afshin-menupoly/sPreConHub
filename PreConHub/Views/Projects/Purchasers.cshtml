@model PreConHub.Models.ViewModels.ProjectPurchasersViewModel
@{
    ViewData["Title"] = "Manage Purchasers";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Projects")">Projects</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Projects", new { id = Model.ProjectId })">@Model.ProjectName</a></li>
                    <li class="breadcrumb-item active">Purchasers</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0">
                <i class="bi bi-people text-primary me-2"></i>Manage Purchasers
            </h1>
            <p class="text-muted mb-0">@Model.ProjectName â€” @Model.Purchasers.Count purchaser(s) across @Model.TotalUnits unit(s)</p>
        </div>
        <div>
            <a href="@Url.Action("Dashboard", "Projects", new { id = Model.ProjectId })" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["InvitationLink"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <h6 class="alert-heading"><i class="bi bi-link-45deg me-2"></i>Invitation Link Generated</h6>
            <div class="input-group input-group-sm mt-2" style="max-width: 600px;">
                <input type="text" class="form-control" id="invitationLink" value="@TempData["InvitationLink"]" readonly />
                <button class="btn btn-outline-primary" type="button" onclick="copyInvitationLink()">
                    <i class="bi bi-clipboard"></i> Copy
                </button>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-6 fw-bold text-primary">@Model.Purchasers.Count</div>
                    <div class="text-muted">Total Purchasers</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-6 fw-bold text-success">@Model.Purchasers.Count(p => p.HasActivated)</div>
                    <div class="text-muted">Activated</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-6 fw-bold text-warning">@Model.Purchasers.Count(p => !p.HasActivated)</div>
                    <div class="text-muted">Pending Activation</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-6 fw-bold text-info">@Model.Purchasers.Count(p => p.HasSubmittedMortgageInfo)</div>
                    <div class="text-muted">Submitted Mortgage Info</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Purchasers Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-list-ul me-2"></i>All Purchasers
            </h5>
            <div>
                <div class="btn-group btn-group-sm" role="group">
                    <input type="radio" class="btn-check" name="statusFilter" id="filterAll" autocomplete="off" checked onchange="filterPurchasers('all')">
                    <label class="btn btn-outline-secondary" for="filterAll">All</label>
                    
                    <input type="radio" class="btn-check" name="statusFilter" id="filterActivated" autocomplete="off" onchange="filterPurchasers('activated')">
                    <label class="btn btn-outline-success" for="filterActivated">Activated</label>
                    
                    <input type="radio" class="btn-check" name="statusFilter" id="filterPending" autocomplete="off" onchange="filterPurchasers('pending')">
                    <label class="btn btn-outline-warning" for="filterPending">Pending</label>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Purchasers.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="purchasersTable">
                        <thead class="table-light">
                            <tr>
                                <th>Purchaser</th>
                                <th>Unit</th>
                                <th>Account Status</th>
                                <th>Last Login</th>
                                <th>Mortgage Info</th>
                                <th>Financials</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var purchaser in Model.Purchasers)
                            {
                                <tr class="purchaser-row" data-status="@(purchaser.HasActivated ? "activated" : "pending")">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle me-3 @(purchaser.HasActivated ? "bg-success" : "bg-warning")">
                                                @purchaser.FirstName?.Substring(0, 1).ToUpper()@purchaser.LastName?.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <strong>@purchaser.FirstName @purchaser.LastName</strong>
                                                @if (purchaser.IsPrimary)
                                                {
                                                    <span class="badge bg-primary ms-1">Primary</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary ms-1">Co-Purchaser</span>
                                                }
                                                <br />
                                                <small class="text-muted">@purchaser.Email</small>
                                                @if (!string.IsNullOrEmpty(purchaser.Phone))
                                                {
                                                    <br /><small class="text-muted">@purchaser.Phone</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "Units", new { id = purchaser.UnitId })" class="text-decoration-none">
                                            <strong>Unit @purchaser.UnitNumber</strong>
                                        </a>
                                        <br />
                                        <small class="text-muted">$@purchaser.PurchasePrice.ToString("N0")</small>
                                    </td>
                                    <td>
                                        @if (purchaser.HasActivated)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Activated
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-hourglass-split me-1"></i>Pending
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (purchaser.LastLoginAt.HasValue)
                                        {
                                            <span title="@purchaser.LastLoginAt?.ToString("g")">
                                                @GetTimeAgo(purchaser.LastLoginAt.Value)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td>
                                        @if (purchaser.HasSubmittedMortgageInfo)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check me-1"></i>Submitted
                                            </span>
                                            @if (purchaser.MortgageApproved)
                                            {
                                                <br /><small class="text-success">$@purchaser.MortgageAmount.ToString("N0") approved</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-dash me-1"></i>Not Submitted
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (purchaser.HasSubmittedFinancials)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check me-1"></i>Submitted
                                            </span>
                                            <br /><small class="text-muted">$@purchaser.TotalFundsAvailable.ToString("N0") available</small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-dash me-1"></i>Not Submitted
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            @if (!purchaser.HasActivated)
                                            {
                                                <form asp-action="ResendInvitation" asp-controller="Units" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@purchaser.UnitPurchaserId" />
                                                    <button type="submit" class="btn btn-outline-primary" title="Resend Invitation">
                                                        <i class="bi bi-envelope"></i>
                                                    </button>
                                                </form>
                                            }
                                            <a href="@Url.Action("Details", "Units", new { id = purchaser.UnitId })" class="btn btn-outline-secondary" title="View Unit">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" title="Remove Purchaser" 
                                                    onclick="confirmRemove(@purchaser.UnitPurchaserId, '@purchaser.FirstName @purchaser.LastName', '@purchaser.UnitNumber')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">No Purchasers Yet</h5>
                    <p class="text-muted">Add purchasers to units from the project dashboard.</p>
                    <a href="@Url.Action("Dashboard", "Projects", new { id = Model.ProjectId })" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-2"></i>Go to Dashboard
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Remove Confirmation Modal -->
<div class="modal fade" id="removeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Remove Purchaser</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to remove <strong id="removePurchaserName"></strong> from <strong id="removeUnitNumber"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    This will revoke their access to the portal. Their account will remain but they will no longer be linked to this unit.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="RemovePurchaser" asp-controller="Units" method="post" id="removeForm">
                    <input type="hidden" name="id" id="removeUnitPurchaserId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Remove Purchaser
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 0.9rem;
    }
    .table td {
        vertical-align: middle;
    }
</style>
}

@section Scripts {
<script>
    function copyInvitationLink() {
        var input = document.getElementById('invitationLink');
        input.select();
        document.execCommand('copy');
        
        // Show feedback
        var btn = event.target.closest('button');
        var originalHtml = btn.innerHTML;
        btn.innerHTML = '<i class="bi bi-check"></i> Copied!';
        setTimeout(function() {
            btn.innerHTML = originalHtml;
        }, 2000);
    }

    function filterPurchasers(status) {
        var rows = document.querySelectorAll('.purchaser-row');
        rows.forEach(function(row) {
            if (status === 'all') {
                row.style.display = '';
            } else if (row.dataset.status === status) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }

    function confirmRemove(unitPurchaserId, purchaserName, unitNumber) {
        document.getElementById('removePurchaserName').textContent = purchaserName;
        document.getElementById('removeUnitNumber').textContent = 'Unit ' + unitNumber;
        document.getElementById('removeUnitPurchaserId').value = unitPurchaserId;
        
        var modal = new bootstrap.Modal(document.getElementById('removeModal'));
        modal.show();
    }
</script>
}

@functions {
    string GetTimeAgo(DateTime dateTime)
    {
        var span = DateTime.UtcNow - dateTime;
        if (span.TotalMinutes < 1) return "Just now";
        if (span.TotalMinutes < 60) return $"{(int)span.TotalMinutes}m ago";
        if (span.TotalHours < 24) return $"{(int)span.TotalHours}h ago";
        if (span.TotalDays < 7) return $"{(int)span.TotalDays}d ago";
        return dateTime.ToString("MMM dd");
    }
}
