<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PreConHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PreConHub.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <partial name="_ImpersonationBanner" />
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PreConHub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @* Projects - Only visible to Builders and Admins *@
                        @if (User.IsInRole("Builder") || User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Projects" asp-action="Index">
                                    <i class="bi bi-building me-1"></i>Projects
                                </a>
                            </li>
                        }
                        @* Reports - Visible to Builders and Admins *@
                        @if (User.IsInRole("Builder") || User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="reportsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-graph-up me-1"></i>Reports
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="reportsDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="Index">
                                            <i class="bi bi-house-door me-2"></i>Reports Hub
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="ProjectReport">
                                            <i class="bi bi-bar-chart-fill me-2"></i>Project Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="FinancialExposure">
                                            <i class="bi bi-shield-exclamation me-2"></i>Financial Exposure
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="ClosingTimeline">
                                            <i class="bi bi-calendar-event me-2"></i>Closing Timeline
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="MortgageTracking">
                                            <i class="bi bi-bank me-2"></i>Mortgage Tracking
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="DepositTracking">
                                            <i class="bi bi-cash-stack me-2"></i>Deposit Tracking
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="PurchaserDirectory">
                                            <i class="bi bi-person-lines-fill me-2"></i>Purchaser Directory
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="UnitCards">
                                            <i class="bi bi-grid-3x3-gap me-2"></i>Unit Cards
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="AllProjects">
                                            <i class="bi bi-building me-2"></i>All Projects
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        @* Lawyer Review Queue *@
                        @if (User.IsInRole("Lawyer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Lawyer" asp-action="Dashboard">
                                    <i class="bi bi-briefcase me-1"></i>Review Queue
                                </a>
                            </li>
                        }

                        @* Marketing Agency Dashboard *@
                        @if (User.IsInRole("MarketingAgency"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="MarketingAgency" asp-action="Dashboard">
                                    <i class="bi bi-megaphone me-1"></i>My Projects
                                </a>
                            </li>
                        }

                        @* Purchaser Dashboard *@
                        @if (User.IsInRole("Purchaser"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Purchaser" asp-action="Dashboard">
                                    <i class="bi bi-house-door me-1"></i>My Dashboard
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="bi bi-shield-lock me-1"></i>Admin
                                </a>
                            </li>
                        }
                    </ul>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <partial name="_NotificationBell" />
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - PreConHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
</body>
</html>
