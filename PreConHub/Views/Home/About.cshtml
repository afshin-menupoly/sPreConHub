    <!-- Footer -->
    <footer class="marketing-footer">
        <div class="marketing-footer-content">
            <div class="marketing-footer-logo">PreConHub</div>
            <p style="margin-bottom: 2rem;">The complete preconstruction closing platform for builders.</p>
            
            <div class="marketing-footer-links">
                <a asp-controller="Home" asp-action="About" class="marketing-footer-link">About</a>
                <a asp-controller="Home" asp-action="Contact" class="marketing-footer-link">Contact</a>
                <a asp-controller="Home" asp-action="Privacy" class="marketing-footer-link">Privacy</a>
            </div>
            
            <div style="border-top: 1px solid rgba(255, 255, 255, 0.1); padding-top: 1.5rem; font-size: 0.875rem; margin-top: 2rem;">
