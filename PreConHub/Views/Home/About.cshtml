@{
    ViewData["Title"] = "About PreConHub";
    ViewData["Description"] = "Learn about PreConHub - the preconstruction closing platform built for builders.";
}

@section Styles {
    <link rel="stylesheet" href="~/css/preconhub-marketing.css" asp-append-version="true" />
    <style>
        /* Remove gap at top */
        .marketing-page { margin: 0 !important; padding: 0 !important; }
        .marketing-hero { 
            margin-top: -1rem !important; 
            margin-bottom: 0 !important;
            padding-top: 0 !important;
        }
        
        /* Scroll to top button */
        .scroll-to-top {
            position: fixed;
            bottom: 30px;
            left: 30px;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #0066ff, #00a8ff);
            color: white;
            border: none;
            border-radius: 50%;
            cursor: pointer;
            display: none;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            box-shadow: 0 4px 20px rgba(0, 102, 255, 0.4);
            transition: all 0.3s ease;
            z-index: 9999;
        }
        
        .scroll-to-top:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 30px rgba(0, 102, 255, 0.6);
        }
        
        .scroll-to-top.show {
            display: flex;
        }
    </style>
}

<div class="marketing-page">
    <!-- Hero Section -->
    <section class="marketing-hero" style="min-height: 50vh;">
        <div class="marketing-hero-overlay"></div>
        <div class="marketing-hero-content" style="text-align: center;">
            <span class="marketing-section-badge" style="background: rgba(255, 255, 255, 0.1); color: white;">About Us</span>
            <h1 class="marketing-hero-title" style="color: white;">Built for Builders</h1>
            <p class="marketing-hero-subtitle" style="max-width: 800px; margin: 0 auto;">
                We understand the chaos of preconstruction closings because we've lived it. PreConHub eliminates the chaos.
            </p>
        </div>
    </section>

    <!-- Story Section -->
    <section class="marketing-section" style="background: white;">
        <div class="marketing-about-grid">
            <div>
                <h2 style="color: #0f172a; margin-bottom: 1.5rem;">Our Story</h2>
                <p style="color: #64748b; line-height: 1.8; margin-bottom: 1.5rem;">
                    PreConHub started when our founder watched hundreds of potential closings turn into costly defaults. The problem wasn't the buyers - it was the complete lack of visibility.
                </p>
                <p style="color: #64748b; line-height: 1.8; margin-bottom: 1.5rem;">
                    Spreadsheets scattered across emails. SOAs delivered at the last minute. No idea which units were at risk until too late.
                </p>
                <p style="color: #64748b; line-height: 1.8;">
                    We built PreConHub to change that - bringing stakeholders together, automating tedious work, and identifying problems before they become disasters.
                </p>
            </div>
            <div class="marketing-about-image">
                <img src="~/images/about-office.jpg" alt="Team" style="background: #e2e8f0; min-height: 300px;">
            </div>
        </div>
    </section>

    <!-- Mission Section -->
    <section class="marketing-section" style="background: linear-gradient(135deg, #0f172a, #1e293b); color: white; text-align: center;">
        <span class="marketing-section-badge" style="background: rgba(255, 255, 255, 0.1); color: white;">Our Mission</span>
        <h2 class="marketing-section-title" style="color: white; max-width: 800px; margin: 0 auto 2rem;">
            Eliminate the chaos of preconstruction closings
        </h2>
        <p style="color: #cbd5e1; font-size: 1.25rem; max-width: 700px; margin: 0 auto;">
            Every closing should be predictable. Every risk should be visible. No more surprises.
        </p>
    </section>

